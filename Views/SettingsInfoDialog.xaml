<Window x:Class="SuspensionPCB_CAN_WPF.Views.SettingsInfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings Information" Height="600" Width="700"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#FF2C3E50">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="{Binding Title}" FontSize="20" FontWeight="Bold" 
                   Foreground="White" Margin="0,0,0,15"/>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                      Background="#FF34495E" Padding="15" BorderThickness="1" 
                      BorderBrush="#FF1A252F">
            <StackPanel>
                <TextBlock Text="{Binding InfoContent}" TextWrapping="Wrap" 
                           Foreground="#FFECF0F1" FontSize="13" LineHeight="22"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Close Button -->
        <Button Grid.Row="2" Content="Close" Width="100" Height="35" 
                Margin="0,15,0,0" HorizontalAlignment="Right"
                Click="CloseButton_Click"
                Style="{StaticResource ModernButton}"/>
    </Grid>
</Window>

