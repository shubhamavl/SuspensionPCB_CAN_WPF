<Window x:Class="SuspensionPCB_CAN_WPF.Views.VersionSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Version History - Select Version to Install" 
        Height="600" Width="800" MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#FFF8F9FA" Icon="pack://application:,,,/Assets/AVL_Icon.ico">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF1B5E96"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1A5588"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF164A7A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFB0B0B0"/>
                                <Setter Property="Foreground" Value="#FF666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FFDC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Select a version to install:" 
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <!-- Loading/Error Message -->
        <Border Grid.Row="1" x:Name="LoadingPanel" 
                Background="White" CornerRadius="8" 
                BorderBrush="#FFDEE2E6" BorderThickness="1" 
                Padding="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock x:Name="LoadingText" Text="Loading releases..." 
                          FontSize="14" HorizontalAlignment="Center"/>
                <ProgressBar x:Name="LoadingProgress" IsIndeterminate="True" 
                            Height="20" Width="200" Margin="0,10,0,0" 
                            Visibility="Visible"/>
            </StackPanel>
        </Border>
        
        <!-- Error Message -->
        <Border Grid.Row="1" x:Name="ErrorPanel" 
                Background="#FFFFEBEE" CornerRadius="8" 
                BorderBrush="#FFDC3545" BorderThickness="2" 
                Padding="20" Visibility="Collapsed">
            <StackPanel>
                <TextBlock x:Name="ErrorText" Text="Error loading releases" 
                          FontSize="14" Foreground="#FFDC3545" 
                          TextWrapping="Wrap"/>
                <Button Content="Retry" x:Name="RetryBtn" 
                       Style="{StaticResource ModernButton}" 
                       Margin="0,10,0,0" HorizontalAlignment="Left"
                       Click="RetryBtn_Click"/>
            </StackPanel>
        </Border>
        
        <!-- Releases List -->
        <Border Grid.Row="1" x:Name="ReleasesPanel" 
                Background="White" CornerRadius="8" 
                BorderBrush="#FFDEE2E6" BorderThickness="1" 
                Padding="10" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Current Version Info -->
                <TextBlock Grid.Row="0" x:Name="CurrentVersionText" 
                          Text="Current version: " 
                          FontSize="12" Margin="0,0,0,10" 
                          Foreground="#FF6C757D"/>
                
                <!-- ListView for Releases -->
                <ListView Grid.Row="1" x:Name="ReleasesListView" 
                         SelectionChanged="ReleasesListView_SelectionChanged"
                         BorderThickness="0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="4" 
                                               BorderThickness="1"
                                               BorderBrush="#FFDEE2E6"
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FFF0F0F0"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Background" Value="#FFE3F2FD"/>
                                                <Setter Property="BorderBrush" Value="#FF1B5E96"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Version Number -->
                                <TextBlock Grid.Column="0" 
                                          Text="{Binding VersionText}" 
                                          FontSize="16" FontWeight="Bold" 
                                          Margin="0,0,15,0" VerticalAlignment="Center"/>
                                
                                <!-- Release Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding ReleaseName}" 
                                              FontSize="14" FontWeight="SemiBold" 
                                              Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding ReleaseDate}" 
                                              FontSize="12" Foreground="#FF6C757D"/>
                                </StackPanel>
                                
                                <!-- Current Version Badge -->
                                <Border Grid.Column="2" 
                                       Background="#FF28A745" 
                                       CornerRadius="12" 
                                       Padding="8,4">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCurrentVersion}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="Current" 
                                              Foreground="White" 
                                              FontSize="11" 
                                              FontWeight="Bold"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
        
        <!-- Release Notes Section -->
        <Border Grid.Row="2" x:Name="ReleaseNotesPanel" 
                Background="White" CornerRadius="8" 
                BorderBrush="#FFDEE2E6" BorderThickness="1" 
                Padding="15" Margin="0,10,0,10" 
                Visibility="Collapsed" MaxHeight="150">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Release Notes:" 
                          FontSize="12" FontWeight="SemiBold" 
                          Margin="0,0,0,8"/>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="ReleaseNotesText" 
                              TextWrapping="Wrap" 
                              FontSize="12" 
                              Text="{Binding}"/>
                </ScrollViewer>
            </Grid>
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                   HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Install Selected Version" 
                   x:Name="InstallBtn" 
                   Style="{StaticResource SuccessButton}" 
                   Click="InstallBtn_Click" 
                   IsEnabled="False" MinWidth="180"/>
            <Button Content="Cancel" 
                   x:Name="CancelBtn" 
                   Style="{StaticResource DangerButton}" 
                   Click="CancelBtn_Click" 
                   MinWidth="100" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>

