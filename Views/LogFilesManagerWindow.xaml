<Window x:Class="SuspensionPCB_CAN_WPF.Views.LogFilesManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log Files Manager" Height="600" Width="900" 
        MinWidth="700" MinHeight="400" MaxWidth="1400" MaxHeight="1000"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
        Background="#FFF5F5F5" Icon="pack://application:,,,/Assets/AVL_Icon.ico">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MinHeight" Value="38"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center" 
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF34495E"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#40000000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1A252F"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Filter/Controls -->
            <RowDefinition Height="*"/>    <!-- File List -->
            <RowDefinition Height="Auto"/> <!-- Status/Buttons -->
            <RowDefinition Height="Auto"/> <!-- Footer -->
        </Grid.RowDefinitions>
        
        <!-- Row 0: Header -->
        <Border Grid.Row="0" Background="#FF5D6D7E" Padding="20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="pack://application:,,,/Assets/AVL_Logo.jpg" Width="50" Height="50" Margin="0,0,15,0" 
                       VerticalAlignment="Center"/>
                <TextBlock Text="Log Files Manager" FontSize="22" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        
        <!-- Row 1: Filter/Controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="15,10">
            <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
            <ComboBox x:Name="FileTypeFilterCombo" Width="150" SelectedIndex="0" 
                      SelectionChanged="FileTypeFilterCombo_SelectionChanged">
                <ComboBoxItem Content="All Files" Tag="All"/>
                <ComboBoxItem Content="Data Logs (CSV)" Tag="CSV"/>
                <ComboBoxItem Content="Production Logs (TXT)" Tag="TXT"/>
                <ComboBoxItem Content="CAN Monitor Exports" Tag="CAN"/>
            </ComboBox>
            <Button Content="ðŸ”„ Refresh" Style="{StaticResource ModernButton}" 
                    Background="#FF3498DB" Width="100" Height="35" Margin="15,0,0,0"
                    Click="RefreshBtn_Click"/>
            <Button x:Name="DeleteSelectedBtn" Content="ðŸ—‘ï¸ Delete Selected" Style="{StaticResource ModernButton}" 
                    Background="#FFDC3545" Width="140" Height="35" Margin="10,0,0,0"
                    Click="DeleteSelectedBtn_Click" IsEnabled="False"/>
            <Button Content="ðŸ—‘ï¸ Clear All" Style="{StaticResource ModernButton}" 
                    Background="#FFE74C3C" Width="100" Height="35" Margin="10,0,0,0"
                    Click="ClearAllBtn_Click"/>
        </StackPanel>
        
        <!-- Row 2: File List -->
        <Border Grid.Row="2" BorderBrush="#FFCCCCCC" BorderThickness="1" Margin="15,5,15,10">
            <DataGrid x:Name="FilesDataGrid" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True" 
                      SelectionMode="Extended"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="True"
                      SelectionChanged="FilesDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="60"/>
                    <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*" MinWidth="200"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding FileType}" Width="120"/>
                    <DataGridTextColumn Header="Size" Binding="{Binding SizeText}" Width="100"/>
                    <DataGridTextColumn Header="Created" Binding="{Binding CreatedText}" Width="150"/>
                    <DataGridTextColumn Header="Path" Binding="{Binding FullPath}" Width="*" MinWidth="200"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        
        <!-- Row 3: Status/Buttons -->
        <Grid Grid.Row="3" Background="#FFF0F0F0" Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                <TextBlock x:Name="FileCountTxt" Text="0 files" FontWeight="SemiBold" Margin="0,0,15,0"/>
                <TextBlock x:Name="TotalSizeTxt" Text="Total size: 0 KB" FontWeight="SemiBold"/>
            </StackPanel>
            
            <Button Grid.Column="1" Content="ðŸ“‚ Open Folder" 
                    Style="{StaticResource ModernButton}" 
                    Background="#FF17A2B8" Width="120" Height="35" Margin="5"
                    Click="OpenFolderBtn_Click"/>
            
            <Button Grid.Column="2" Content="Close" 
                    Style="{StaticResource ModernButton}" 
                    Background="#FF95A5A6" Width="100" Height="35" Margin="5,5,15,5"
                    Click="CloseBtn_Click"/>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="4" Background="#FF5D6D7E" Padding="8,4">
            <TextBlock Text="Â© 2025 AVL India Pvt Ltd. All rights reserved." 
                       Foreground="White" FontSize="10" Opacity="0.8" 
                       HorizontalAlignment="Right"/>
        </Border>
    </Grid>
</Window>

