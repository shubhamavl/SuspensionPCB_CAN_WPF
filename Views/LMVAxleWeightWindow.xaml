<Window x:Class="SuspensionPCB_CAN_WPF.Views.LMVAxleWeightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LMV Axle Weight Test" Height="800" Width="1400"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#FFF5F5F5" Icon="pack://application:,,,/Assets/AVL_Icon.ico"
        KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBlue}" Padding="15,10">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="AxleNoText" Text="Axle 1" 
                               FontSize="28" FontWeight="Bold" 
                               Foreground="White" 
                               VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <TextBlock Text="ðŸš— LMV Axle Weight Test" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Ellipse x:Name="ConnectionIndicator" Width="12" Height="12" 
                             Fill="#FFDC3545" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock x:Name="ConnectionStatusText" Text="Disconnected" 
                               Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock x:Name="DataRateText" Text="Rate: --" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status Message -->
        <Border Grid.Row="1" Background="#FFE8F5E9" BorderBrush="#FF4CAF50" 
                BorderThickness="0,0,0,2" Padding="10,8">
            <TextBlock x:Name="StatusMessageText" 
                       Text="Ready to start axle weight test" 
                       FontSize="18" FontWeight="Bold"
                       Foreground="#FF2E7D32"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Weight Display Panel with Validation Indicators -->
        <Grid Grid.Row="2" Background="#FFF0F0F0" Margin="10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Side Weight Display -->
            <Border Grid.Column="0" Margin="10,10,5,10" Background="#FFE3F2FD" 
                    BorderBrush="#FF2196F3" BorderThickness="2" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="LHS" 
                               FontSize="32" FontWeight="Bold" 
                               Foreground="#FF1565C0" 
                               HorizontalAlignment="Center" Margin="0,10"/>
                    
                    <!-- Validation Indicator Rectangle -->
                    <Border Grid.Row="1" x:Name="LeftValidationRect" 
                            Width="60" Height="300" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Background="#FFDC3545" 
                            BorderBrush="#FF000000" 
                            BorderThickness="2" 
                            Margin="0,10"/>
                    
                    <!-- Weight Display Box -->
                    <Border Grid.Row="2" x:Name="LeftWeightBox" 
                            Background="#FFFF9800" 
                            BorderBrush="#FFE65100" 
                            BorderThickness="2" 
                            CornerRadius="3" 
                            Margin="20,10" 
                            Padding="10,15">
                        <TextBlock x:Name="LeftWeightText" 
                                   Text="-- kg" 
                                   FontSize="36" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Foreground="White"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Right Side Weight Display -->
            <Border Grid.Column="1" Margin="5,10,10,10" Background="#FFE3F2FD" 
                    BorderBrush="#FF2196F3" BorderThickness="2" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="RHS" 
                               FontSize="32" FontWeight="Bold" 
                               Foreground="#FF1565C0" 
                               HorizontalAlignment="Center" Margin="0,10"/>
                    
                    <!-- Validation Indicator Rectangle -->
                    <Border Grid.Row="1" x:Name="RightValidationRect" 
                            Width="60" Height="300" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Background="#FFDC3545" 
                            BorderBrush="#FF000000" 
                            BorderThickness="2" 
                            Margin="0,10"/>
                    
                    <!-- Weight Display Box -->
                    <Border Grid.Row="2" x:Name="RightWeightBox" 
                            Background="#FFFF9800" 
                            BorderBrush="#FFE65100" 
                            BorderThickness="2" 
                            CornerRadius="3" 
                            Margin="20,10" 
                            Padding="10,15">
                        <TextBlock x:Name="RightWeightText" 
                                   Text="-- kg" 
                                   FontSize="36" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Foreground="White"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Info Panel -->
        <Border Grid.Row="3" Background="#FFF0F0F0" BorderBrush="#FFCCCCCC" 
                BorderThickness="0,0,0,1" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Total Weight -->
                    <TextBlock Text="Total:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    <TextBlock x:Name="TotalWeightText" Text="-- kg" Margin="0,0,20,0" FontWeight="Bold"/>
                    
                    <!-- Balance -->
                    <TextBlock Text="Left %:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    <TextBlock x:Name="BalanceText" Text="-- %" Margin="0,0,20,0"/>
                    
                    <!-- Min Weight -->
                    <TextBlock Text="Min:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    <TextBlock x:Name="MinWeightText" Text="-- kg" Margin="0,0,20,0"/>
                    
                    <!-- Max Weight -->
                    <TextBlock Text="Max:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    <TextBlock x:Name="MaxWeightText" Text="-- kg" Margin="0,0,20,0"/>
                    
                    <!-- Samples -->
                    <TextBlock Text="Samples:" FontWeight="SemiBold" Margin="0,0,5,0"/>
                    <TextBlock x:Name="SampleCountText" Text="0"/>
                </StackPanel>
                
                <!-- Axle Selector -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Axle:" FontWeight="SemiBold" Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <ComboBox x:Name="AxleSelector" Width="80" Height="30" 
                              SelectionChanged="AxleSelector_SelectionChanged" 
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Graph Area -->
        <Grid x:Name="chartContainer" Grid.Row="4" Margin="10"/>

        <!-- Control Panel -->
        <Border Grid.Row="5" Background="#FFF0F0F0" BorderBrush="#FFCCCCCC" 
                BorderThickness="0,1,0,0" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="StartBtn" Content="F1 - Start" 
                        Style="{StaticResource ModernButton}" 
                        Background="#FF28A745" Click="StartBtn_Click" 
                        Width="120" Height="40" Margin="5,0" FontSize="16" FontWeight="Bold"/>
                <Button x:Name="StopBtn" Content="F2 - Stop" 
                        Style="{StaticResource ModernButton}" 
                        Background="#FFDC3545" Click="StopBtn_Click" 
                        Width="120" Height="40" Margin="5,0" FontSize="16" FontWeight="Bold"
                        IsEnabled="False"/>
                <Button x:Name="SaveBtn" Content="F3 - Save" 
                        Style="{StaticResource ModernButton}" 
                        Background="#FF17A2B8" Click="SaveBtn_Click" 
                        Width="120" Height="40" Margin="5,0" FontSize="16" FontWeight="Bold"
                        IsEnabled="False"/>
                <Button x:Name="PauseBtn" Content="â¸ Pause" 
                        Style="{StaticResource ModernButton}" 
                        Background="#FF6C757D" Click="PauseBtn_Click" 
                        Width="100" Height="32" Margin="5,0" IsEnabled="False"/>
                <Button x:Name="ResumeBtn" Content="â–¶ Resume" 
                        Style="{StaticResource ModernButton}" 
                        Background="#FF28A745" Click="ResumeBtn_Click" 
                        Width="100" Height="32" Margin="5,0" IsEnabled="False"/>
                <Button x:Name="ClearBtn" Content="ðŸ—‘ Clear" 
                        Style="{StaticResource ModernButton}" 
                        Background="#FF95A5A6" Click="ClearBtn_Click" 
                        Width="100" Height="32" Margin="5,0"/>
                <Button x:Name="ExportBtn" Content="ðŸ’¾ Export CSV" 
                        Style="{StaticResource ModernButton}" 
                        Background="#FF6F42C1" Click="ExportBtn_Click" 
                        Width="120" Height="32" Margin="5,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
