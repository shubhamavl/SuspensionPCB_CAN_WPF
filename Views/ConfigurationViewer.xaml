<Window x:Class="SuspensionPCB_CAN_WPF.Views.ConfigurationViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuration Viewer" Height="800" Width="1000" 
        MinWidth="600" MinHeight="400" MaxWidth="1200" MaxHeight="800"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#FFF5F5F5" Icon="Assets/AVL_Icon.ico">

    <Window.Resources>
        <Style x:Key="ConfigCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ConfigHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style x:Key="ConfigLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#FF34495E"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
        </Style>
        
        <Style x:Key="ConfigValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2C3E50" Padding="15,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ“‹ Configuration Viewer" Foreground="White" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text=" - View all system configuration files" Foreground="White" FontSize="12" 
                           VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
                      Margin="10" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0">
                    <!-- Application Settings -->
                    <Border Style="{StaticResource ConfigCard}">
                        <StackPanel>
                            <TextBlock Text="âš™ï¸ Application Settings" Style="{StaticResource ConfigHeader}"/>
                            
                            <TextBlock Text="File Location:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="SettingsFileLocation" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="COM Port:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="SettingsComPort" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Transmission Rate:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="SettingsTransmissionRate" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Save Directory:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="SettingsSaveDirectory" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Last Known ADC Mode:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="SettingsAdcMode" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Last Saved:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="SettingsLastSaved" Style="{StaticResource ConfigValue}"/>
                            
                            <Button x:Name="OpenSettingsFileBtn" Content="ðŸ“ Open Settings File" 
                                    Style="{StaticResource ModernButton}" Background="#FF3498DB" 
                                    Click="OpenSettingsFileBtn_Click" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Left Calibration - Internal ADC -->
                    <Border Style="{StaticResource ConfigCard}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ Left Side - Internal ADC (12-bit)" Style="{StaticResource ConfigHeader}"/>
                            
                            <TextBlock Text="File Location:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="LeftCalFileLocationInternal" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Status:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="LeftCalStatusInternal" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Slope:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="LeftCalSlopeInternal" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Intercept:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="LeftCalInterceptInternal" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Zero Point ADC:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="LeftCalZeroPointInternal" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Known Weight ADC:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="LeftCalKnownWeightInternal" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Calibrated:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="LeftCalCalibratedInternal" Style="{StaticResource ConfigValue}"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button x:Name="OpenLeftCalFileBtnInternal" Content="ðŸ“ Open" 
                                        Style="{StaticResource ModernButton}" Background="#FF27AE60" 
                                        Click="OpenLeftCalFileBtnInternal_Click" Width="100" Margin="0,0,5,0"/>
                                <Button x:Name="ResetLeftCalInternal" Content="ðŸ—‘ï¸ Reset" 
                                        Style="{StaticResource ModernButton}" Background="#FFE74C3C" 
                                        Click="ResetLeftCalInternal_Click" Width="100"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Left Calibration - ADS1115 -->
                    <Border Style="{StaticResource ConfigCard}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ Left Side - ADS1115 (16-bit)" Style="{StaticResource ConfigHeader}"/>
                            
                            <TextBlock Text="File Location:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="LeftCalFileLocationADS1115" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Status:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="LeftCalStatusADS1115" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Slope:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="LeftCalSlopeADS1115" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Intercept:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="LeftCalInterceptADS1115" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Zero Point ADC:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="LeftCalZeroPointADS1115" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Known Weight ADC:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="LeftCalKnownWeightADS1115" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Calibrated:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="LeftCalCalibratedADS1115" Style="{StaticResource ConfigValue}"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button x:Name="OpenLeftCalFileBtnADS1115" Content="ðŸ“ Open" 
                                        Style="{StaticResource ModernButton}" Background="#FF27AE60" 
                                        Click="OpenLeftCalFileBtnADS1115_Click" Width="100" Margin="0,0,5,0"/>
                                <Button x:Name="ResetLeftCalADS1115" Content="ðŸ—‘ï¸ Reset" 
                                        Style="{StaticResource ModernButton}" Background="#FFE74C3C" 
                                        Click="ResetLeftCalADS1115_Click" Width="100"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="1">
                    <!-- Right Calibration - Internal ADC -->
                    <Border Style="{StaticResource ConfigCard}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ Right Side - Internal ADC (12-bit)" Style="{StaticResource ConfigHeader}"/>
                            
                            <TextBlock Text="File Location:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="RightCalFileLocationInternal" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Status:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="RightCalStatusInternal" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Slope:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="RightCalSlopeInternal" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Intercept:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="RightCalInterceptInternal" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Zero Point ADC:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="RightCalZeroPointInternal" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Known Weight ADC:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="RightCalKnownWeightInternal" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Calibrated:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="RightCalCalibratedInternal" Style="{StaticResource ConfigValue}"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button x:Name="OpenRightCalFileBtnInternal" Content="ðŸ“ Open" 
                                        Style="{StaticResource ModernButton}" Background="#FF27AE60" 
                                        Click="OpenRightCalFileBtnInternal_Click" Width="100" Margin="0,0,5,0"/>
                                <Button x:Name="ResetRightCalInternal" Content="ðŸ—‘ï¸ Reset" 
                                        Style="{StaticResource ModernButton}" Background="#FFE74C3C" 
                                        Click="ResetRightCalInternal_Click" Width="100"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Right Calibration - ADS1115 -->
                    <Border Style="{StaticResource ConfigCard}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ Right Side - ADS1115 (16-bit)" Style="{StaticResource ConfigHeader}"/>
                            
                            <TextBlock Text="File Location:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="RightCalFileLocationADS1115" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Status:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="RightCalStatusADS1115" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Slope:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="RightCalSlopeADS1115" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Intercept:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="RightCalInterceptADS1115" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Zero Point ADC:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="RightCalZeroPointADS1115" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Known Weight ADC:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="RightCalKnownWeightADS1115" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Calibrated:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="RightCalCalibratedADS1115" Style="{StaticResource ConfigValue}"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button x:Name="OpenRightCalFileBtnADS1115" Content="ðŸ“ Open" 
                                        Style="{StaticResource ModernButton}" Background="#FF27AE60" 
                                        Click="OpenRightCalFileBtnADS1115_Click" Width="100" Margin="0,0,5,0"/>
                                <Button x:Name="ResetRightCalADS1115" Content="ðŸ—‘ï¸ Reset" 
                                        Style="{StaticResource ModernButton}" Background="#FFE74C3C" 
                                        Click="ResetRightCalADS1115_Click" Width="100"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Tare Configuration -->
                    <Border Style="{StaticResource ConfigCard}">
                        <StackPanel>
                            <TextBlock Text="âš–ï¸ Tare Configuration" Style="{StaticResource ConfigHeader}"/>
                            
                            <TextBlock Text="File Location:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="TareFileLocation" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Left Tare Status:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="TareLeftStatus" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Left Baseline:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="TareLeftBaseline" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Right Tare Status:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="TareRightStatus" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Right Baseline:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="TareRightBaseline" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Last Updated:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="TareLastUpdated" Style="{StaticResource ConfigValue}"/>
                            
                            <Button x:Name="OpenTareFileBtn" Content="ðŸ“ Open Tare Configuration" 
                                    Style="{StaticResource ModernButton}" Background="#FFE67E22" 
                                    Click="OpenTareFileBtn_Click" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Data Directory -->
                    <Border Style="{StaticResource ConfigCard}">
                        <StackPanel>
                            <TextBlock Text="ðŸ“‚ Data Directory" Style="{StaticResource ConfigHeader}"/>
                            
                            <TextBlock Text="Directory Path:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="DataDirectoryPath" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="CSV Files:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="DataCsvFiles" Style="{StaticResource ConfigValue}"/>
                            
                            <TextBlock Text="Total Size:" Style="{StaticResource ConfigLabel}"/>
                            <TextBlock x:Name="DataTotalSize" Style="{StaticResource ConfigValue}"/>
                            
                            <Button x:Name="OpenDataDirectoryBtn" Content="ðŸ“ Open Data Directory" 
                                    Style="{StaticResource ModernButton}" Background="#FF9B59B6" 
                                    Click="OpenDataDirectoryBtn_Click" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FFF0F0F0" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="RefreshBtn" Content="ðŸ”„ Refresh" 
                        Style="{StaticResource ModernButton}" Background="#FF95A5A6" 
                        Click="RefreshBtn_Click" Width="100" Margin="0,0,10,0"/>
                <Button x:Name="CloseBtn" Content="Close" 
                        Style="{StaticResource ModernButton}" Background="#FFE74C3C" 
                        Click="CloseBtn_Click" Width="100"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
