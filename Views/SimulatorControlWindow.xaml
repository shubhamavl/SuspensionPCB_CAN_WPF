<Window x:Class="SuspensionPCB_CAN_WPF.Views.SimulatorControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simulator Control" Height="600" Width="700" 
        MinWidth="600" MinHeight="500" MaxWidth="900" MaxHeight="800"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#FFF5F5F5" Icon="pack://application:,,,/Assets/AVL_Icon.ico">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBlue}" Padding="15,10" CornerRadius="6" Margin="0,0,0,15">
            <TextBlock Text="Simulator Control - Real-time Parameter Adjustment" 
                       Foreground="White" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Left Side Parameters -->
                <GroupBox Header="Left Side Parameters" Style="{StaticResource ResponsiveGroupBox}" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Weight -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,15">
                            <TextBlock Text="Weight (kg)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="LeftWeightSlider" Grid.Column="0" 
                                        Minimum="0" Maximum="1000" Value="0" 
                                        TickFrequency="10" IsSnapToTickEnabled="False"
                                        ValueChanged="LeftWeightSlider_ValueChanged" 
                                        Margin="0,0,10,0"/>
                                <TextBox x:Name="LeftWeightTextBox" Grid.Column="1" 
                                         Width="80" Text="0.0" 
                                         TextChanged="LeftWeightTextBox_TextChanged" 
                                         TextAlignment="Right"/>
                            </Grid>
                        </StackPanel>

                        <!-- Zero ADC -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,15">
                            <TextBlock Text="Zero ADC" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="LeftZeroADCTextBox" Text="2048" 
                                     TextChanged="LeftZeroADCTextBox_TextChanged" 
                                     TextAlignment="Right"/>
                        </StackPanel>

                        <!-- Sensitivity -->
                        <StackPanel Grid.Row="2" Margin="0,0,0,15">
                            <TextBlock Text="Sensitivity (ADC counts/kg)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="LeftSensitivityTextBox" Text="100.0" 
                                     TextChanged="LeftSensitivityTextBox_TextChanged" 
                                     TextAlignment="Right"/>
                        </StackPanel>

                        <!-- Current ADC Display -->
                        <Border Grid.Row="3" Background="#FFF0F0F0" BorderBrush="#FFCCCCCC" 
                                BorderThickness="1" CornerRadius="4" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Current ADC:" FontWeight="SemiBold" 
                                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock x:Name="LeftCurrentADCTextBlock" Grid.Column="1" 
                                           Text="2048" FontSize="16" FontWeight="Bold" 
                                           Foreground="{StaticResource PrimaryBlue}" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>
                </GroupBox>

                <!-- Right Side Parameters -->
                <GroupBox Header="Right Side Parameters" Style="{StaticResource ResponsiveGroupBox}" Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Weight -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,15">
                            <TextBlock Text="Weight (kg)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="RightWeightSlider" Grid.Column="0" 
                                        Minimum="0" Maximum="1000" Value="0" 
                                        TickFrequency="10" IsSnapToTickEnabled="False"
                                        ValueChanged="RightWeightSlider_ValueChanged" 
                                        Margin="0,0,10,0"/>
                                <TextBox x:Name="RightWeightTextBox" Grid.Column="1" 
                                         Width="80" Text="0.0" 
                                         TextChanged="RightWeightTextBox_TextChanged" 
                                         TextAlignment="Right"/>
                            </Grid>
                        </StackPanel>

                        <!-- Zero ADC -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,15">
                            <TextBlock Text="Zero ADC" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="RightZeroADCTextBox" Text="2048" 
                                     TextChanged="RightZeroADCTextBox_TextChanged" 
                                     TextAlignment="Right"/>
                        </StackPanel>

                        <!-- Sensitivity -->
                        <StackPanel Grid.Row="2" Margin="0,0,0,15">
                            <TextBlock Text="Sensitivity (ADC counts/kg)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="RightSensitivityTextBox" Text="100.0" 
                                     TextChanged="RightSensitivityTextBox_TextChanged" 
                                     TextAlignment="Right"/>
                        </StackPanel>

                        <!-- Current ADC Display -->
                        <Border Grid.Row="3" Background="#FFF0F0F0" BorderBrush="#FFCCCCCC" 
                                BorderThickness="1" CornerRadius="4" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Current ADC:" FontWeight="SemiBold" 
                                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock x:Name="RightCurrentADCTextBlock" Grid.Column="1" 
                                           Text="2048" FontSize="16" FontWeight="Bold" 
                                           Foreground="{StaticResource PrimaryBlue}" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>
                </GroupBox>

                <!-- Global Settings -->
                <GroupBox Header="Global Settings" Style="{StaticResource ResponsiveGroupBox}">
                    <StackPanel>
                        <!-- Noise Level -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="Noise Level (Â±ADC counts)" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Slider x:Name="NoiseLevelSlider" Grid.Column="0" 
                                        Minimum="0" Maximum="50" Value="5" 
                                        TickFrequency="1" IsSnapToTickEnabled="False"
                                        ValueChanged="NoiseLevelSlider_ValueChanged" 
                                        Margin="0,0,10,0"/>
                                <TextBox x:Name="NoiseLevelTextBox" Grid.Column="1" 
                                         Width="80" Text="5.0" 
                                         TextChanged="NoiseLevelTextBox_TextChanged" 
                                         TextAlignment="Right"/>
                            </Grid>
                        </StackPanel>

                        <!-- ADC Mode (Read-only) -->
                        <Border Background="#FFF0F0F0" BorderBrush="#FFCCCCCC" 
                                BorderThickness="1" CornerRadius="4" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ADC Mode:" FontWeight="SemiBold" 
                                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock x:Name="ADCModeTextBlock" Grid.Column="1" 
                                           Text="Internal (12-bit)" FontSize="14" 
                                           Foreground="{StaticResource GrayDark}" 
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Reset to Defaults" Style="{StaticResource ModernButton}" 
                    Background="{StaticResource WarningOrange}" 
                    Click="ResetToDefaults_Click" MinWidth="150"/>
            <Button Content="Close" Style="{StaticResource ModernButton}" 
                    Background="{StaticResource GrayMedium}" 
                    Click="Close_Click" MinWidth="100"/>
        </StackPanel>
    </Grid>
</Window>

