<Window x:Class="SuspensionPCB_CAN_WPF.Views.MonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CAN Bus Monitor" Height="400" Width="700" 
        MinWidth="500" MinHeight="300" MaxWidth="1000" MaxHeight="600"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#FFF5F5F5" Icon="pack://application:,,,/Assets/AVL_Icon.ico">
    
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center" 
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF34495E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1A252F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2C3E50" Padding="15,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ“Š CAN Bus Monitor" Foreground="White" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text=" - Real-time CAN message monitoring" Foreground="White" FontSize="12" 
                           VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

            <!-- Control Panel -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Button x:Name="StartMonitorBtn" Content="â–¶ Start Monitor" Style="{StaticResource ModernButton}" 
                        Background="#FF27AE60" Click="StartMonitorBtn_Click"/>
                <Button x:Name="StopMonitorBtn" Content="â¹ Stop Monitor" Style="{StaticResource ModernButton}" 
                        Background="#FFE74C3C" Click="StopMonitorBtn_Click" IsEnabled="False"/>
                <Button x:Name="ClearMonitorBtn" Content="ðŸ—‘ï¸ Clear" Style="{StaticResource ModernButton}" 
                        Background="#FF95A5A6" Click="ClearMonitorBtn_Click"/>
                <TextBlock x:Name="MonitorStatusTxt" Text="Stopped" VerticalAlignment="Center" 
                           Margin="20,0,0,0" FontWeight="SemiBold"/>
                    </StackPanel>

            <!-- Message Display -->
            <ListBox Grid.Row="1" x:Name="MessageListBox" 
                     Background="White" BorderBrush="#FFCCCCCC" BorderThickness="1"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     FontFamily="Consolas" FontSize="11">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <TextBlock Text="{Binding Timestamp}" Width="80" Foreground="#FF7F8C8D"/>
                            <TextBlock Text="{Binding Direction}" Width="30" Foreground="#FF3498DB" Margin="5,0"/>
                            <TextBlock Text="{Binding CanId}" Width="60" Foreground="#FFE67E22" Margin="5,0"/>
                            <TextBlock Text="{Binding Data}" Width="120" Foreground="#FF2ECC71" Margin="5,0"/>
                            <TextBlock Text="{Binding Description}" Foreground="#FF2C3E50"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#FFF0F0F0" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="MessageCountTxt" Text="0 messages" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <Button x:Name="ExportBtn" Content="ðŸ’¾ Export" Style="{StaticResource ModernButton}" 
                        Background="#FF3498DB" Click="ExportBtn_Click" Width="100" Margin="0,0,5,0"/>
                <Button x:Name="CloseBtn" Content="Close" Style="{StaticResource ModernButton}" 
                        Background="#FF95A5A6" Click="CloseBtn_Click" Width="100"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>