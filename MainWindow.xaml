<Window x:Class="SuspensionPCB_CAN_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="LMV Station-3 Suspension CAN Monitor" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF1B5E96"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF1B5E96" Padding="15">
            <Grid>
                <TextBlock Text="LMV Station-3 Suspension Test Monitoring" 
                           FontSize="18" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Status:" Foreground="White" VerticalAlignment="Center" Margin="5"/>
                    <Ellipse x:Name="StatusIndicator" Width="12" Height="12" 
                             Fill="#FFDC3545" VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusText" Text="Disconnected" 
                               Foreground="White" VerticalAlignment="Center" Margin="5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Controls -->
        <Border Grid.Row="1" Background="#FFF8F9FA" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Connection -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <ComboBox x:Name="BaudRateCombo" Width="100" Margin="5" SelectedIndex="1">
                        <ComboBoxItem>500 kbps</ComboBoxItem>
                        <ComboBoxItem>250 kbps</ComboBoxItem>
                        <ComboBoxItem>125 kbps</ComboBoxItem>
                        <ComboBoxItem>1 Mbps</ComboBoxItem>
                    </ComboBox>
                    <Button x:Name="ConnectBtn" Content="Connect" 
                            Style="{StaticResource ModernButton}" 
                            Click="ConnectBtn_Click"/>
                    <Button x:Name="DisconnectBtn" Content="Disconnect" 
                            Style="{StaticResource ModernButton}" 
                            Background="#FFDC3545" Click="DisconnectBtn_Click" 
                            IsEnabled="False"/>
                </StackPanel>

                <!-- Test Messages -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="RequestSuspensionBtn" Content="Req Suspension" 
                            Style="{StaticResource ModernButton}" 
                            Background="#FF28A745" Click="RequestSuspensionBtn_Click" 
                            IsEnabled="False" ToolTip="Send 0x030 request for Suspension Weight Data"/>
                    <Button x:Name="RequestAxleBtn" Content="Req Axle" 
                            Style="{StaticResource ModernButton}" 
                            Background="#FF28A745" Click="RequestAxleBtn_Click" 
                            IsEnabled="False" ToolTip="Send 0x031 request for Axle Weight Data"/>

                    <Button x:Name="OpenCalibrationBtn"
                            Content="Calibrate"
                            Width="100"
                            Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0"
                            Click="OpenCalibrationBtn_Click"/>

                </StackPanel>

                <!-- Auto Request -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox x:Name="AutoRequestChk" Content="Auto Request" 
                              VerticalAlignment="Center" Margin="10,0"
                              Checked="AutoRequestChk_Checked" 
                              Unchecked="AutoRequestChk_Unchecked"/>
                    <TextBox x:Name="IntervalTxt" Text="1000" Width="60" 
                             VerticalAlignment="Center" TextAlignment="Center"/>
                    <TextBlock Text="ms" VerticalAlignment="Center" Margin="5,0"/>
                </StackPanel>

                <!-- Clear and Stop All -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="StopAllBtn" Content="Stop All" 
                            Style="{StaticResource ModernButton}" 
                            Background="#FF6C757D" 
                            Click="StopAll_Click" 
                            IsEnabled="False" 
                             Margin="0,5,20,5"
                            ToolTip="Stop both Suspension and Axle data transmission"/>

                    <Button x:Name="ClearLogBtn" Content="Clear Log" 
                            Style="{StaticResource ModernButton}" 
                            Background="#FF6C757D" 
                            Click="ClearLogBtn_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Message Log -->
            <GroupBox Grid.Column="0" Header="CAN Message Log" Padding="10" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Filters -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Filter ID:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="FilterIdTxt" Width="80" 
                             TextChanged="FilterIdTxt_TextChanged"/>
                        <CheckBox x:Name="ShowTxChk" Content="TX" IsChecked="True" 
                              Margin="15,0,5,0" Checked="FilterChanged" 
                              Unchecked="FilterChanged"/>
                        <CheckBox x:Name="ShowRxChk" Content="RX" IsChecked="True" 
                              Margin="5,0,15,0" Checked="FilterChanged" 
                              Unchecked="FilterChanged"/>

                        <TextBlock Text="Count:" Margin="10,0,5,0"/>
                        <TextBlock x:Name="MessageCountTxt" Text="0" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Message Grid - FIXED BINDING PROPERTIES -->
                    <DataGrid Grid.Row="1" x:Name="MessageGrid" 
                          AutoGenerateColumns="False" IsReadOnly="True"
                          ItemsSource="{Binding FilteredMessages}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="90"/>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="60"/>
                            <DataGridTextColumn Header="Dir" Binding="{Binding Direction}" Width="40"/>
                            <DataGridTextColumn Header="Data" Binding="{Binding Data}" Width="200"/>
                            <DataGridTextColumn Header="Decoded" Binding="{Binding Decoded}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>

            <!-- Weight Data Display -->
            <GroupBox Grid.Column="1" Header="Live Weight Data" Padding="10">
                <StackPanel>
                    <!-- Suspension Weights -->
                    <Border Background="#FFF8F9FA" BorderBrush="#FF1B5E96" BorderThickness="1" 
                            CornerRadius="5" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Suspension Weights (kg)" FontWeight="Bold" 
                                       Foreground="#FF1B5E96" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <!-- Front Left -->
                                <Border Grid.Row="0" Grid.Column="0" Background="#FFE7F3FF" 
                                        BorderBrush="#FF1B5E96" BorderThickness="1" 
                                        CornerRadius="3" Margin="2" Padding="5">
                                    <StackPanel>
                                        <TextBlock Text="FL" FontSize="10" HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="SuspensionFLTxt" Text="0.0" FontSize="14" 
                                                   FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Front Right -->
                                <Border Grid.Row="0" Grid.Column="1" Background="#FFE7F3FF" 
                                        BorderBrush="#FF1B5E96" BorderThickness="1" 
                                        CornerRadius="3" Margin="2" Padding="5">
                                    <StackPanel>
                                        <TextBlock Text="FR" FontSize="10" HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="SuspensionFRTxt" Text="0.0" FontSize="14" 
                                                   FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Rear Left -->
                                <Border Grid.Row="1" Grid.Column="0" Background="#FFE7F3FF" 
                                        BorderBrush="#FF1B5E96" BorderThickness="1" 
                                        CornerRadius="3" Margin="2" Padding="5">
                                    <StackPanel>
                                        <TextBlock Text="RL" FontSize="10" HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="SuspensionRLTxt" Text="0.0" FontSize="14" 
                                                   FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Rear Right -->
                                <Border Grid.Row="1" Grid.Column="1" Background="#FFE7F3FF" 
                                        BorderBrush="#FF1B5E96" BorderThickness="1" 
                                        CornerRadius="3" Margin="2" Padding="5">
                                    <StackPanel>
                                        <TextBlock Text="RR" FontSize="10" HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="SuspensionRRTxt" Text="0.0" FontSize="14" 
                                                   FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Total -->
                                <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#FF28A745" 
                                        BorderBrush="#FF1B5E96" BorderThickness="1" 
                                        CornerRadius="3" Margin="2" Padding="5">
                                    <StackPanel>
                                        <TextBlock Text="Total" FontSize="10" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock x:Name="SuspensionTotalTxt" Text="0.0" FontSize="16" 
                                                   FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Axle Weights -->
                    <Border Background="#FFF8F9FA" BorderBrush="#FF28A745" BorderThickness="1" 
                            CornerRadius="5" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Axle Weights (kg)" FontWeight="Bold" 
                                       Foreground="#FF28A745" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <!-- Front Left -->
                                <Border Grid.Row="0" Grid.Column="0" Background="#FFE8F5E8" 
                                        BorderBrush="#FF28A745" BorderThickness="1" 
                                        CornerRadius="3" Margin="2" Padding="5">
                                    <StackPanel>
                                        <TextBlock Text="FL" FontSize="10" HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="AxleFLTxt" Text="0.0" FontSize="14" 
                                                   FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Front Right -->
                                <Border Grid.Row="0" Grid.Column="1" Background="#FFE8F5E8" 
                                        BorderBrush="#FF28A745" BorderThickness="1" 
                                        CornerRadius="3" Margin="2" Padding="5">
                                    <StackPanel>
                                        <TextBlock Text="FR" FontSize="10" HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="AxleFRTxt" Text="0.0" FontSize="14" 
                                                   FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Rear Left -->
                                <Border Grid.Row="1" Grid.Column="0" Background="#FFE8F5E8" 
                                        BorderBrush="#FF28A745" BorderThickness="1" 
                                        CornerRadius="3" Margin="2" Padding="5">
                                    <StackPanel>
                                        <TextBlock Text="RL" FontSize="10" HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="AxleRLTxt" Text="0.0" FontSize="14" 
                                                   FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Rear Right -->
                                <Border Grid.Row="1" Grid.Column="1" Background="#FFE8F5E8" 
                                        BorderBrush="#FF28A745" BorderThickness="1" 
                                        CornerRadius="3" Margin="2" Padding="5">
                                    <StackPanel>
                                        <TextBlock Text="RR" FontSize="10" HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="AxleRRTxt" Text="0.0" FontSize="14" 
                                                   FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Total -->
                                <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#FF17A2B8" 
                                        BorderBrush="#FF28A745" BorderThickness="1" 
                                        CornerRadius="3" Margin="2" Padding="5">
                                    <StackPanel>
                                        <TextBlock Text="Total" FontSize="10" HorizontalAlignment="Center" Foreground="White"/>
                                        <TextBlock x:Name="AxleTotalTxt" Text="0.0" FontSize="16" 
                                                   FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- System Status -->
                    <Border Background="#FFF8F9FA" BorderBrush="#FF6C757D" BorderThickness="1" 
                            CornerRadius="5" Padding="10">
                        <StackPanel>
                            <TextBlock Text="System Status" FontWeight="Bold" 
                                       Foreground="#FF6C757D" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock x:Name="DataRateTxt" Text="Data Rate: --" FontSize="12" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="LastUpdateTxt" Text="Last Update: --" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </GroupBox>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Background="#FF1B5E96" Foreground="White">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarText" Text="Ready" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="TimestampText" Text="" Margin="5,0" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>