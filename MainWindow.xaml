<Window x:Class="SuspensionPCB_CAN_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Suspension System Monitor" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF1B5E96"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF1B5E96" Padding="15">
            <Grid>
                <TextBlock Text="Suspension System Monitor" 
                           FontSize="18" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Status:" Foreground="White" VerticalAlignment="Center" Margin="5"/>
                    <Ellipse x:Name="StatusIndicator" Width="12" Height="12" 
                             Fill="#FFDC3545" VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusText" Text="Disconnected" 
                               Foreground="White" VerticalAlignment="Center" Margin="5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Controls -->
        <Border Grid.Row="1" Background="#FFF8F9FA" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Connection -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <ComboBox x:Name="BaudRateCombo" Width="100" Margin="5" SelectedIndex="1">
                        <ComboBoxItem>500 kbps</ComboBoxItem>
                        <ComboBoxItem>250 kbps</ComboBoxItem>
                        <ComboBoxItem>125 kbps</ComboBoxItem>
                        <ComboBoxItem>1 Mbps</ComboBoxItem>
                    </ComboBox>
                    <Button x:Name="ConnectBtn" Content="Connect" 
                            Style="{StaticResource ModernButton}" 
                            Click="ConnectBtn_Click"/>
                    <Button x:Name="DisconnectBtn" Content="Disconnect" 
                            Style="{StaticResource ModernButton}" 
                            Background="#FFDC3545" Click="DisconnectBtn_Click" 
                            IsEnabled="False"/>
                </StackPanel>

                <!-- Test Messages -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="RequestSuspensionBtn" Content="Start Left Stream" 
                            Style="{StaticResource ModernButton}" 
                            Background="#FF28A745" Click="RequestSuspensionBtn_Click" 
                            IsEnabled="False" ToolTip="Start left side raw ADC data streaming"/>
                    <Button x:Name="RequestAxleBtn" Content="Start Right Stream" 
                            Style="{StaticResource ModernButton}" 
                            Background="#FF28A745" Click="RequestAxleBtn_Click" 
                            IsEnabled="False" ToolTip="Start right side raw ADC data streaming"/>

                    <Button x:Name="CalibrateLeftBtn"
                            Content="Calibrate Left"
                            Width="100"
                            Height="30"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="10,0,0,0"
                            Click="CalibrateLeft_Click"/>

                </StackPanel>

                <!-- Auto Request -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox x:Name="AutoRequestChk" Content="Auto Request" 
                              VerticalAlignment="Center" Margin="10,0"
                              Checked="AutoRequestChk_Checked" 
                              Unchecked="AutoRequestChk_Unchecked"/>
                    <TextBox x:Name="IntervalTxt" Text="1000" Width="60" 
                             VerticalAlignment="Center" TextAlignment="Center"/>
                    <TextBlock Text="ms" VerticalAlignment="Center" Margin="5,0"/>
                </StackPanel>

                <!-- Clear and Stop All -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="StopAllBtn" Content="Stop All" 
                            Style="{StaticResource ModernButton}" 
                            Background="#FF6C757D" 
                            Click="StopAll_Click" 
                            IsEnabled="False" 
                             Margin="0,5,20,5"
                            ToolTip="Stop both Suspension and Axle data transmission"/>

                    <Button x:Name="ClearLogBtn" Content="Clear Log" 
                            Style="{StaticResource ModernButton}" 
                            Background="#FF6C757D" 
                            Click="ClearLogBtn_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="15">
            <TabControl>
                <TabItem Header="Monitor">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

            <!-- Message Log -->
            <GroupBox Grid.Column="0" Header="CAN Message Log" Padding="10" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Filters -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Filter ID:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="FilterIdTxt" Width="80" 
                             TextChanged="FilterIdTxt_TextChanged"/>
                        <CheckBox x:Name="ShowTxChk" Content="TX" IsChecked="True" 
                              Margin="15,0,5,0" Checked="FilterChanged" 
                              Unchecked="FilterChanged"/>
                        <CheckBox x:Name="ShowRxChk" Content="RX" IsChecked="True" 
                              Margin="5,0,15,0" Checked="FilterChanged" 
                              Unchecked="FilterChanged"/>

                        <TextBlock Text="Count:" Margin="10,0,5,0"/>
                        <TextBlock x:Name="MessageCountTxt" Text="0" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Message Grid - FIXED BINDING PROPERTIES -->
                    <DataGrid Grid.Row="1" x:Name="MessageGrid" 
                          AutoGenerateColumns="False" IsReadOnly="True"
                          ItemsSource="{Binding FilteredMessages}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="90"/>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="60"/>
                            <DataGridTextColumn Header="Dir" Binding="{Binding Direction}" Width="40"/>
                            <DataGridTextColumn Header="Data" Binding="{Binding Data}" Width="200"/>
                            <DataGridTextColumn Header="Decoded" Binding="{Binding Decoded}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>

            <!-- Weight Data Display -->
            <GroupBox Grid.Column="1" Header="Live Weight Data" Padding="10">
                <StackPanel>
                    <!-- Left Side -->
                    <Border Background="#FFF8F9FA" BorderBrush="#FF1B5E96" BorderThickness="1" 
                            CornerRadius="5" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="LEFT SIDE" FontWeight="Bold" 
                                       Foreground="#FF1B5E96" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Raw ADC -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Raw ADC:" FontWeight="Bold" Margin="0,0,5,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LeftRawTxt" Text="0" FontWeight="Bold" Margin="5,0,0,5"/>

                                <!-- Calibrated Weight -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Calibrated:" FontWeight="Bold" Margin="0,0,5,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="LeftCalibratedTxt" Text="0.0 kg" FontWeight="Bold" Margin="5,0,0,5"/>

                                <!-- Display Weight (after tare) -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Display:" FontWeight="Bold" Margin="0,0,5,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="LeftDisplayTxt" Text="0.0 kg" FontWeight="Bold" 
                                           Foreground="#FF28A745" Margin="5,0,0,5"/>

                                <!-- Tare Status -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Tare:" FontWeight="Bold" Margin="0,0,5,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="LeftTareStatusTxt" Text="- Not Tared" FontSize="10" Margin="5,0,0,0"/>
                            </Grid>

                            <!-- Left Side Buttons -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                <Button Content="Tare Left" Style="{StaticResource ModernButton}" 
                                        Background="#FF17A2B8" Click="TareLeft_Click" Margin="5"/>
                                <Button Content="Calibrate Left" Style="{StaticResource ModernButton}" 
                                        Background="#FF28A745" Click="CalibrateLeft_Click" Margin="5"/>
                                    </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Right Side -->
                    <Border Background="#FFF8F9FA" BorderBrush="#FF28A745" BorderThickness="1" 
                            CornerRadius="5" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="RIGHT SIDE" FontWeight="Bold" 
                                       Foreground="#FF28A745" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Raw ADC -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Raw ADC:" FontWeight="Bold" Margin="0,0,5,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="RightRawTxt" Text="0" FontWeight="Bold" Margin="5,0,0,5"/>

                                <!-- Calibrated Weight -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Calibrated:" FontWeight="Bold" Margin="0,0,5,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="RightCalibratedTxt" Text="0.0 kg" FontWeight="Bold" Margin="5,0,0,5"/>

                                <!-- Display Weight (after tare) -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Display:" FontWeight="Bold" Margin="0,0,5,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="RightDisplayTxt" Text="0.0 kg" FontWeight="Bold" 
                                           Foreground="#FF28A745" Margin="5,0,0,5"/>

                                <!-- Tare Status -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Tare:" FontWeight="Bold" Margin="0,0,5,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="RightTareStatusTxt" Text="- Not Tared" FontSize="10" Margin="5,0,0,0"/>
                            </Grid>

                            <!-- Right Side Buttons -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                <Button Content="Tare Right" Style="{StaticResource ModernButton}" 
                                        Background="#FF17A2B8" Click="TareRight_Click" Margin="5"/>
                                <Button Content="Calibrate Right" Style="{StaticResource ModernButton}" 
                                        Background="#FF28A745" Click="CalibrateRight_Click" Margin="5"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Total and Balance -->
                    <Border Background="#FFF8F9FA" BorderBrush="#FF6C757D" BorderThickness="1" 
                            CornerRadius="5" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="SUMMARY" FontWeight="Bold" 
                                       Foreground="#FF6C757D" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <!-- Total Weight -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Total:" FontWeight="Bold" Margin="0,0,5,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TotalWeightTxt" Text="0.0 kg" FontWeight="Bold" 
                                           Foreground="#FF28A745" Margin="5,0,0,5"/>

                                <!-- Balance -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Balance:" FontWeight="Bold" Margin="0,0,5,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="BalanceTxt" Text="50% L / 50% R" FontWeight="Bold" 
                                           Foreground="#FF6C757D" Margin="5,0,0,0"/>
                            </Grid>

                            <!-- Reset Tares Button -->
                            <Button Content="Reset All Tares" Style="{StaticResource ModernButton}" 
                                    Background="#FFDC3545" Click="ResetTares_Click" 
                                    HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- System Status -->
                    <Border Background="#FFF8F9FA" BorderBrush="#FF6C757D" BorderThickness="1" 
                            CornerRadius="5" Padding="10">
                        <StackPanel>
                            <TextBlock Text="System Status" FontWeight="Bold" 
                                       Foreground="#FF6C757D" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock x:Name="DataRateTxt" Text="Data Rate: --" FontSize="12" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="LastUpdateTxt" Text="Last Update: --" FontSize="12" HorizontalAlignment="Center"/>
                            
                            <!-- Data Logging Controls -->
                            <Separator Margin="0,10,0,10"/>
                            <TextBlock Text="Data Logging" FontWeight="Bold" 
                                       Foreground="#FF6C757D" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                                <Button x:Name="StartLoggingBtn" Content="Start Logging" 
                                        Style="{StaticResource ModernButton}" Background="#FF28A745" 
                                        Click="StartLogging_Click" Margin="5"/>
                                <Button x:Name="StopLoggingBtn" Content="Stop Logging" 
                                        Style="{StaticResource ModernButton}" Background="#FFDC3545" 
                                        Click="StopLogging_Click" Margin="5" IsEnabled="False"/>
                            </StackPanel>
                            
                            <TextBlock x:Name="LoggingStatusTxt" Text="Not logging" FontSize="10" 
                                       HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            
                            <Button x:Name="ExportLogBtn" Content="Export CSV" 
                                    Style="{StaticResource ModernButton}" Background="#FF17A2B8" 
                                    Click="ExportLog_Click" HorizontalAlignment="Center" Margin="5"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </GroupBox>
                    </Grid>
                </TabItem>
                
                <TabItem Header="Logs">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Log Controls -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <CheckBox x:Name="EnableLoggingChk" Content="Enable Logging" IsChecked="True" 
                                      VerticalAlignment="Center" Margin="0,0,20,0" Checked="EnableLoggingChk_Checked" 
                                      Unchecked="EnableLoggingChk_Unchecked"/>
                            <TextBlock Text="Min Level:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox x:Name="MinLevelCombo" Width="100" SelectedIndex="0" 
                                      SelectionChanged="MinLevelCombo_SelectionChanged">
                                <ComboBoxItem Content="Info"/>
                                <ComboBoxItem Content="Warning"/>
                                <ComboBoxItem Content="Error"/>
                                <ComboBoxItem Content="Critical"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Log Filters -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Show:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <CheckBox x:Name="ShowInfoChk" Content="Info" IsChecked="True" 
                                      VerticalAlignment="Center" Margin="0,0,10,0" Checked="LogFilterChanged" 
                                      Unchecked="LogFilterChanged"/>
                            <CheckBox x:Name="ShowWarningChk" Content="Warning" IsChecked="True" 
                                      VerticalAlignment="Center" Margin="0,0,10,0" Checked="LogFilterChanged" 
                                      Unchecked="LogFilterChanged"/>
                            <CheckBox x:Name="ShowErrorChk" Content="Error" IsChecked="True" 
                                      VerticalAlignment="Center" Margin="0,0,10,0" Checked="LogFilterChanged" 
                                      Unchecked="LogFilterChanged"/>
                            <CheckBox x:Name="ShowCriticalChk" Content="Critical" IsChecked="True" 
                                      VerticalAlignment="Center" Margin="0,0,10,0" Checked="LogFilterChanged" 
                                      Unchecked="LogFilterChanged"/>
                        </StackPanel>

                        <!-- Log Messages -->
                        <GroupBox Grid.Row="2" Header="Log Messages" Padding="5">
                            <ListBox x:Name="LogMessagesListBox" ItemsSource="{Binding FilteredLogEntries}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock Text="{Binding FormattedMessage}" FontFamily="Consolas" FontSize="11"/>
                                            <TextBlock Text="{Binding Source}" FontSize="9" Foreground="Gray" Margin="20,0,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </GroupBox>

                        <!-- Log Actions -->
                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button Content="Clear Logs" Style="{StaticResource ModernButton}" 
                                    Background="#FFDC3545" Click="ClearLogsBtn_Click" Margin="5"/>
                            <Button Content="Export Logs" Style="{StaticResource ModernButton}" 
                                    Background="#FF17A2B8" Click="ExportLogsBtn_Click" Margin="5"/>
                            <TextBlock x:Name="LogCountTxt" Text="0 entries" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Background="#FF1B5E96" Foreground="White">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarText" Text="Ready" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="TimestampText" Text="" Margin="5,0" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>