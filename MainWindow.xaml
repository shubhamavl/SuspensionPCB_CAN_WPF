<Window x:Class="SuspensionPCB_CAN_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Weight Measurement System Monitor" Height="800" Width="1400" 
        MinWidth="1200" MinHeight="700" MaxWidth="2000" MaxHeight="1200"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
        Background="#FFF5F5F5">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MinHeight" Value="38"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center" 
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF34495E"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#40000000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1A252F"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Responsive GroupBox Style -->
        <Style x:Key="ResponsiveGroupBox" TargetType="GroupBox">
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#20000000"/>
                                </Border.Effect>
                            </Border>
                            <StackPanel>
                                <TextBlock Text="{TemplateBinding Header}" 
                                         FontWeight="Bold" 
                                         FontSize="16"
                                         Foreground="#FF2C3E50" 
                                         Margin="20,15,20,10"/>
                                <ContentPresenter Margin="{TemplateBinding Padding}"/>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Responsive Data Card Style -->
        <Style x:Key="DataCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#20000000"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2C3E50" Padding="15">
            <Grid>
                <TextBlock Text="Weight Measurement System Monitor" 
                           FontSize="18" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Status:" Foreground="White" VerticalAlignment="Center" Margin="5"/>
                    <Ellipse x:Name="StatusIndicator" Width="12" Height="12" 
                             Fill="#FFDC3545" VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusText" Text="Disconnected" 
                               Foreground="White" VerticalAlignment="Center" Margin="5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Controls -->
        <Border Grid.Row="1" Background="#FFF8F9FA" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Connection -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="CAN: 250 kbps" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold" Foreground="#FF2C3E50"/>
                    <Button x:Name="ConnectBtn" Content="🔌 Connect" 
                            Style="{StaticResource ModernButton}" 
                            Background="#FF28A745"
                            Click="ConnectBtn_Click"
                            ToolTip="Connect to USB-CAN adapter (250 kbps fixed)"/>
                    <Button x:Name="DisconnectBtn" Content="🔌 Disconnect" 
                            Style="{StaticResource ModernButton}" 
                            Background="#FFE74C3C" Click="DisconnectBtn_Click" 
                            IsEnabled="False"
                            ToolTip="Disconnect from USB-CAN adapter"/>
                </StackPanel>

                <!-- Data Stream Controls -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="30,0,0,0">
                    <Button x:Name="RequestLeftBtn" Content="▶ Start Left" 
                            Style="{StaticResource ModernButton}" 
                            Background="#FF27AE60" Click="RequestLeftBtn_Click" 
                            IsEnabled="False" 
                            ToolTip="Start left side streaming at selected rate (Ctrl+L)"/>
                    <Button x:Name="RequestRightBtn" Content="▶ Start Right" 
                            Style="{StaticResource ModernButton}" 
                            Background="#FF27AE60" Click="RequestRightBtn_Click" 
                            IsEnabled="False" 
                            ToolTip="Start right side streaming at selected rate (Ctrl+R)"/>
                </StackPanel>

                <!-- Stop All -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="30,0,0,0">
                    <Button x:Name="StopAllBtn" Content="⏹ Stop All Streams" 
                            Style="{StaticResource ModernButton}" 
                            Background="#FFE74C3C" 
                            Click="StopAll_Click" 
                            IsEnabled="False" 
                            ToolTip="Stop all active streams (Ctrl+S)"/>
                </StackPanel>

                <!-- Settings -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" Margin="30,0,0,0">
                    <Button x:Name="SettingsToggleBtn" Content="⚙ Settings" 
                            Style="{StaticResource ModernButton}" Background="#FF95A5A6"
                            Click="SettingsToggle_Click"
                            ToolTip="Open transmission settings"/>
                </StackPanel>

                <!-- Spacer -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- Empty space for right alignment -->
                </StackPanel>
            </Grid>
        </Border>

        <!-- Settings Panel (initially collapsed) -->
        <Border x:Name="SettingsPanel" Grid.Row="2" Visibility="Collapsed" 
                Background="#FFF0F0F0" BorderBrush="#FFCCCCCC" BorderThickness="1" 
                Padding="15" Margin="15,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Transmission Rate:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="TransmissionRateCombo" Width="120" SelectedIndex="2" SelectionChanged="TransmissionRateCombo_SelectionChanged">
                        <ComboBoxItem>100 Hz</ComboBoxItem>
                        <ComboBoxItem>500 Hz</ComboBoxItem>
                        <ComboBoxItem>1 kHz</ComboBoxItem>
                        <ComboBoxItem>1 Hz</ComboBoxItem>
                    </ComboBox>
                    <TextBlock Text="(Applied to new streams)" FontSize="10" 
                               Foreground="#FF95A5A6" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <Separator Margin="0,10,0,10"/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Save Directory:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="SaveDirectoryTxt" Width="380" IsReadOnly="True" Margin="0,0,10,0"/>
                    <Button x:Name="BrowseSaveDirBtn" Content="Browse..." Style="{StaticResource ModernButton}" Click="BrowseSaveDirBtn_Click"/>
                </StackPanel>
                <TextBlock x:Name="SaveDirHintTxt" Text="Choose where CSV logs, calibration JSON and tare JSON will be stored" FontSize="10" Foreground="#FF95A5A6"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
                      Margin="15" Padding="5">
            <Grid MinWidth="1100">
                <StackPanel>
                <!-- Weight Data Display -->
                <GroupBox Header="Live Weight Data" Style="{StaticResource ResponsiveGroupBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Side -->
                        <Border Grid.Column="0" Style="{StaticResource DataCard}" 
                                BorderBrush="#FF2C3E50" BorderThickness="2">
                            <StackPanel>
                                <TextBlock Text="LEFT SIDE" FontWeight="Bold" FontSize="14"
                                           Foreground="#FF2C3E50" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                                <!-- Streaming Status Indicator -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                                    <Ellipse x:Name="LeftStreamIndicator" Width="12" Height="12" 
                                             Fill="#FFE74C3C" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock x:Name="LeftStreamStatusTxt" Text="Stopped" 
                                               FontSize="11" Foreground="#FF95A5A6" VerticalAlignment="Center"/>
                                </StackPanel>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Raw ADC -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Raw ADC:" FontWeight="Bold" Margin="0,0,5,5"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LeftRawTxt" Text="0" FontWeight="Bold" Margin="5,0,0,5"/>

                                    <!-- Calibrated Weight -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Calibrated:" FontWeight="Bold" Margin="0,0,5,5"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="LeftCalibratedTxt" Text="0.0 kg" FontWeight="Bold" Margin="5,0,0,5"/>

                                    <!-- Display Weight (after tare) -->
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Display:" FontWeight="Bold" Margin="0,0,5,5"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="LeftDisplayTxt" Text="0.0 kg" FontWeight="Bold" FontSize="20"
                                               Foreground="#FF27AE60" Margin="5,0,0,8"/>

                                    <!-- Tare Status -->
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Tare:" FontWeight="Bold" Margin="0,0,5,0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="LeftTareStatusTxt" Text="- Not Tared" FontSize="10" Margin="5,0,0,0"/>
                                </Grid>

                                <!-- Left Side Buttons -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                                    <Button Content="Tare Left" Style="{StaticResource ModernButton}" 
                                            Background="#FF3498DB" Click="TareLeft_Click" Margin="5"
                                            ToolTip="Zero the display at current weight (subtract baseline)"/>
                                    <Button Content="Calibrate Left" Style="{StaticResource ModernButton}" 
                                            Background="#FF27AE60" Click="CalibrateLeft_Click" Margin="5"
                                            ToolTip="Perform 2-point linear calibration using known weights"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Right Side -->
                        <Border Grid.Column="1" Style="{StaticResource DataCard}" 
                                BorderBrush="#FF27AE60" BorderThickness="2">
                            <StackPanel>
                                <TextBlock Text="RIGHT SIDE" FontWeight="Bold" FontSize="14"
                                           Foreground="#FF27AE60" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                                <!-- Streaming Status Indicator -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                                    <Ellipse x:Name="RightStreamIndicator" Width="12" Height="12" 
                                             Fill="#FFE74C3C" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock x:Name="RightStreamStatusTxt" Text="Stopped" 
                                               FontSize="11" Foreground="#FF95A5A6" VerticalAlignment="Center"/>
                                </StackPanel>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Raw ADC -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Raw ADC:" FontWeight="Bold" Margin="0,0,5,5"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="RightRawTxt" Text="0" FontWeight="Bold" Margin="5,0,0,5"/>

                                    <!-- Calibrated Weight -->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Calibrated:" FontWeight="Bold" Margin="0,0,5,5"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="RightCalibratedTxt" Text="0.0 kg" FontWeight="Bold" Margin="5,0,0,5"/>

                                    <!-- Display Weight (after tare) -->
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Display:" FontWeight="Bold" Margin="0,0,5,5"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="RightDisplayTxt" Text="0.0 kg" FontWeight="Bold" FontSize="20"
                                               Foreground="#FF27AE60" Margin="5,0,0,8"/>

                                    <!-- Tare Status -->
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Tare:" FontWeight="Bold" Margin="0,0,5,0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="RightTareStatusTxt" Text="- Not Tared" FontSize="10" Margin="5,0,0,0"/>
                                </Grid>

                                <!-- Right Side Buttons -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                                    <Button Content="Tare Right" Style="{StaticResource ModernButton}" 
                                            Background="#FF3498DB" Click="TareRight_Click" Margin="5"
                                            ToolTip="Zero the display at current weight (subtract baseline)"/>
                                    <Button Content="Calibrate Right" Style="{StaticResource ModernButton}" 
                                            Background="#FF27AE60" Click="CalibrateRight_Click" Margin="5"
                                            ToolTip="Perform 2-point linear calibration using known weights"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </GroupBox>

                <!-- Summary and System Status -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total and Balance -->
                    <GroupBox Grid.Column="0" Header="Summary" Style="{StaticResource ResponsiveGroupBox}" Margin="0,0,10,0">
                        <StackPanel>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <!-- Total Weight -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Total:" FontWeight="Bold" Margin="0,0,5,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TotalWeightTxt" Text="0.0 kg" FontWeight="Bold" 
                                           Foreground="#FF28A745" Margin="5,0,0,5"/>

                                <!-- Balance -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Balance:" FontWeight="Bold" Margin="0,0,5,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="BalanceTxt" Text="50% L / 50% R" FontWeight="Bold" 
                                           Foreground="#FF6C757D" Margin="5,0,0,0"/>
                            </Grid>

                            <!-- Reset Tares Button -->
                            <Button Content="Reset All Tares" Style="{StaticResource ModernButton}" 
                                    Background="#FFDC3545" Click="ResetTares_Click" 
                                    HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- System Status -->
                    <GroupBox Grid.Column="1" Header="System Status" Style="{StaticResource ResponsiveGroupBox}" Margin="10,0,0,0">
                        <StackPanel>
                            <TextBlock x:Name="DataRateTxt" Text="Data Rate: --" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock x:Name="LastUpdateTxt" Text="Last Update: --" FontSize="12" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            
                            <!-- Data Logging Controls -->
                            <Separator Margin="0,0,0,10"/>
                            <TextBlock Text="Data Logging" FontWeight="Bold" 
                                       Foreground="#FF6C757D" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                                <Button x:Name="StartLoggingBtn" Content="Start Logging" 
                                        Style="{StaticResource ModernButton}" Background="#FF28A745" 
                                        Click="StartLogging_Click" Margin="5"/>
                                <Button x:Name="StopLoggingBtn" Content="Stop Logging" 
                                        Style="{StaticResource ModernButton}" Background="#FFDC3545" 
                                        Click="StopLogging_Click" Margin="5" IsEnabled="False"/>
                            </StackPanel>
                            
                            <TextBlock x:Name="LoggingStatusTxt" Text="Not logging" FontSize="10" 
                                       HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            
                            <Button x:Name="ExportLogBtn" Content="Export CSV" 
                                    Style="{StaticResource ModernButton}" Background="#FF17A2B8" 
                                    Click="ExportLog_Click" HorizontalAlignment="Center" Margin="5"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>

                <!-- Window Access Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Open Monitor Window" Style="{StaticResource ModernButton}" 
                            Background="#FF17A2B8" Click="OpenMonitorWindow_Click" Margin="5"/>
                    <Button Content="Open Logs Window" Style="{StaticResource ModernButton}" 
                            Background="#FF6C757D" Click="OpenLogsWindow_Click" Margin="5"/>
                </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Status Bar -->
        <StatusBar Grid.Row="4" Background="#FF2C3E50" Foreground="White" Height="28">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarText" Text="Ready | CAN v0.7 @ 250 kbps" />
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="StreamStatusBar" Text="Idle" />
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <Ellipse x:Name="TxIndicator" Width="8" Height="8" Fill="#FFDC3545" Margin="0,0,5,0"/>
                    <TextBlock Text="TX:" Margin="0,0,5,0"/>
                    <TextBlock x:Name="TxCountBar" Text="0" />
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="MessageCountBar" Text="RX: 0" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="TimestampText" Text="" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>