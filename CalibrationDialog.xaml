<Window x:Class="SuspensionPCB_CAN_WPF.CalibrationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LMV Suspension Axle Weight Measurement System Monitor - Calibration" 
        Height="900" Width="1200" MinHeight="800" MinWidth="1000"
        WindowStartupLocation="CenterOwner" WindowState="Maximized"
        ResizeMode="CanResize" Background="#FFF8F9FA" Icon="Assets/AVL_Icon.ico">

    <Window.Resources>
        <!-- Modern Professional Styles -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF1B5E96"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1A5588"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF164A7A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFB0B0B0"/>
                                <Setter Property="Foreground" Value="#FF666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FFDC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="InfoTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#FFDEE2E6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF1B5E96"/>
                            </Trigger>
                            <Trigger Property="IsReadOnly" Value="True">
                                <Setter Property="Background" Value="#FFF8F9FA"/>
                                <Setter Property="Foreground" Value="#FF6C757D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="StepGroupBox" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#FF1B5E96"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="#FF495057"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <StackPanel>
                                    <TextBlock Text="{TemplateBinding Header}" 
                                             FontWeight="{TemplateBinding FontWeight}"
                                             FontSize="16"
                                             Foreground="{TemplateBinding Foreground}"
                                             Margin="0,0,0,15"/>
                                    <ContentPresenter/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ActiveStepGroupBox" TargetType="GroupBox" BasedOn="{StaticResource StepGroupBox}">
            <Setter Property="BorderBrush" Value="#FF1B5E96"/>
            <Setter Property="Background" Value="#FFF0F8FF"/>
        </Style>
        
        <!-- Visual Stepper Styles -->
        <Style x:Key="StepperCircle" TargetType="Ellipse">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Stroke" Value="#FF6C757D"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="Fill" Value="Transparent"/>
        </Style>
        
        <Style x:Key="StepperCircleActive" TargetType="Ellipse" BasedOn="{StaticResource StepperCircle}">
            <Setter Property="Fill" Value="#FF1B5E96"/>
            <Setter Property="Stroke" Value="#FF1B5E96"/>
        </Style>
        
        <Style x:Key="StepperCircleCompleted" TargetType="Ellipse" BasedOn="{StaticResource StepperCircle}">
            <Setter Property="Fill" Value="#FF28A745"/>
            <Setter Property="Stroke" Value="#FF28A745"/>
        </Style>
        
        <Style x:Key="StepperLine" TargetType="Rectangle">
            <Setter Property="Height" Value="2"/>
            <Setter Property="Fill" Value="#FF6C757D"/>
        </Style>
        
        <Style x:Key="StepperLineCompleted" TargetType="Rectangle" BasedOn="{StaticResource StepperLine}">
            <Setter Property="Fill" Value="#FF28A745"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>      <!-- Header -->
            <RowDefinition Height="Auto"/>      <!-- Progress Stepper -->
            <RowDefinition Height="*"/>         <!-- Main Content -->
            <RowDefinition Height="Auto"/>      <!-- Action Buttons -->
            <RowDefinition Height="Auto"/>      <!-- Footer -->
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#FF1B5E96" CornerRadius="12" Padding="40,30" Margin="0,0,0,30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Image Source="Assets/AVL_Logo.jpg" Width="50" Height="50" Margin="0,0,20,0" 
                               VerticalAlignment="Center"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding Side, StringFormat='{}{0} Side Calibration'}" 
                                       FontSize="32" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Hardware Calibration Process" 
                                       FontSize="18" Foreground="#FFE3F2FD"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                <!-- Status Indicator -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="20" Height="20" Fill="#FF27AE60" Margin="0,0,10,0"/>
                    <TextBlock Text="Ready for Calibration" FontSize="16" FontWeight="SemiBold" 
                               Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
            </Grid>
        </Border>

        <!-- Progress Stepper -->
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="White" CornerRadius="12" 
                BorderBrush="#FFE9ECEF" BorderThickness="2" Padding="40,30" Margin="0,0,0,30">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Step 1 -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,60,0">
                    <Grid Width="60" Height="60" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <Ellipse x:Name="Step1Circle" Style="{StaticResource StepperCircleActive}" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="1" FontWeight="Bold" FontSize="24" Foreground="White" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <TextBlock Text="Capture Point 1" FontSize="18" FontWeight="SemiBold" 
                               HorizontalAlignment="Center" Foreground="#FF1B5E96"/>
                    <TextBlock Text="Empty Platform" FontSize="14" 
                               HorizontalAlignment="Center" Foreground="#FF6C757D" Margin="0,5,0,0"/>
                </StackPanel>
                
                <!-- Connecting Line -->
                <Rectangle x:Name="Step1Line" Width="80" Height="4" Fill="#FFE9ECEF" 
                           VerticalAlignment="Center" Margin="0,0,60,0"/>
                
                <!-- Step 2 -->
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <Grid Width="60" Height="60" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <Ellipse x:Name="Step2Circle" Style="{StaticResource StepperCircle}" 
                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="2" FontWeight="Bold" FontSize="24" Foreground="#FF6C757D" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                    <TextBlock Text="Capture Point 2" FontSize="18" FontWeight="SemiBold" 
                               HorizontalAlignment="Center" Foreground="#FF1B5E96"/>
                    <TextBlock Text="Known Weight" FontSize="14" 
                               HorizontalAlignment="Center" Foreground="#FF6C757D" Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Side - Point 1 -->
            <Border Grid.Column="0" Background="White" CornerRadius="12" 
                    BorderBrush="#FFE9ECEF" BorderThickness="2" Padding="30">
                <StackPanel>
                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Ellipse Width="40" Height="40" Fill="#FF1B5E96" Margin="0,0,15,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Step 1: Empty Platform" FontSize="24" FontWeight="Bold" 
                                       Foreground="#FF1B5E96"/>
                            <TextBlock Text="Capture baseline measurement" FontSize="14" 
                                       Foreground="#FF6C757D"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Current Raw ADC -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Current Raw ADC Value:" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="#FF495057" Margin="0,0,0,8"/>
                        <TextBox x:Name="Point1RawTxt" FontSize="20" FontWeight="Bold" 
                                Text="{Binding Point1RawADC}" IsReadOnly="True" 
                                Background="#FFF8F9FA" BorderBrush="#FFDEE2E6" 
                                Padding="15,10" TextAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Known Weight Input -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Known Weight (kg):" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="#FF495057" Margin="0,0,0,8"/>
                        <TextBox x:Name="Point1WeightTxt" FontSize="20" FontWeight="Bold" 
                                Text="{Binding Point1KnownWeight, UpdateSourceTrigger=PropertyChanged}" 
                                Background="White" BorderBrush="#FFDEE2E6" 
                                Padding="15,10" TextAlignment="Center"/>
                        <TextBlock Text="Enter 0 for empty platform" FontSize="12" 
                                   Foreground="#FF6C757D" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <!-- Capture Button -->
                    <Button x:Name="CapturePoint1Btn" Content="ðŸ“¸ Capture Point 1" 
                            Style="{StaticResource SuccessButton}" 
                            Click="CapturePoint1_Click" FontSize="18" 
                            Height="50" Margin="0,10,0,0"/>
                    
                    <!-- Status -->
                    <TextBlock x:Name="Point1StatusTxt" Text="Ready to capture" FontSize="14" 
                               Foreground="#FF28A745" HorizontalAlignment="Center" 
                               Margin="0,15,0,0" FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
            
            <!-- Divider -->
            <Rectangle Grid.Column="1" Fill="#FFE9ECEF" Width="2" HorizontalAlignment="Center"/>
            
            <!-- Right Side - Point 2 -->
            <Border Grid.Column="2" Background="White" CornerRadius="12" 
                    BorderBrush="#FFE9ECEF" BorderThickness="2" Padding="30">
                <StackPanel>
                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Ellipse Width="40" Height="40" Fill="#FF6C757D" Margin="0,0,15,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Step 2: Known Weight" FontSize="24" FontWeight="Bold" 
                                       Foreground="#FF1B5E96"/>
                            <TextBlock Text="Add calibrated weight" FontSize="14" 
                                       Foreground="#FF6C757D"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Current Raw ADC -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Current Raw ADC Value:" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="#FF495057" Margin="0,0,0,8"/>
                        <TextBox x:Name="Point2RawTxt" FontSize="20" FontWeight="Bold" 
                                Text="{Binding Point2RawADC}" IsReadOnly="True" 
                                Background="#FFF8F9FA" BorderBrush="#FFDEE2E6" 
                                Padding="15,10" TextAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Known Weight Input -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Known Weight (kg):" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="#FF495057" Margin="0,0,0,8"/>
                        <TextBox x:Name="Point2WeightTxt" FontSize="20" FontWeight="Bold" 
                                Text="{Binding Point2KnownWeight, UpdateSourceTrigger=PropertyChanged}" 
                                Background="White" BorderBrush="#FFDEE2E6" 
                                Padding="15,10" TextAlignment="Center"/>
                        <TextBlock Text="Enter known weight (e.g., 1000)" FontSize="12" 
                                   Foreground="#FF6C757D" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <!-- Capture Button -->
                    <Button x:Name="CapturePoint2Btn" Content="ðŸ“¸ Capture Point 2" 
                            Style="{StaticResource SuccessButton}" 
                            Click="CapturePoint2_Click" FontSize="18" 
                            Height="50" Margin="0,10,0,0"/>
                    
                    <!-- Status -->
                    <TextBlock x:Name="Point2StatusTxt" Text="Waiting for Step 1" FontSize="14" 
                               Foreground="#FF6C757D" HorizontalAlignment="Center" 
                               Margin="0,15,0,0" FontWeight="SemiBold"/>
            </StackPanel>
            </Border>
        </Grid>

        <!-- Calculate Button -->
        <Button Grid.Row="2" Grid.Column="1" Content="ðŸ§® Calculate Calibration" 
                Style="{StaticResource SuccessButton}" 
                Click="CalculateCalibration_Click" FontSize="18" 
                Height="50" Width="200" VerticalAlignment="Bottom" Margin="0,0,0,20"/>

        <!-- Action Buttons -->
        <Border Grid.Row="3" Grid.ColumnSpan="2" Background="White" CornerRadius="12" 
                BorderBrush="#FFE9ECEF" BorderThickness="2" Padding="40,30" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Calculate Button -->
                <Button Grid.Column="1" Content="ðŸ§® Calculate Calibration" 
                        Style="{StaticResource SuccessButton}" 
                        Click="CalculateCalibration_Click" FontSize="18" 
                        Height="50" Width="250" Margin="0,0,20,0"/>
                
                <!-- Save Button -->
                <Button Grid.Column="2" Content="ðŸ’¾ Save Calibration" 
                        Style="{StaticResource SuccessButton}" 
                        Click="SaveCalibration_Click" FontSize="18" 
                        Height="50" Width="200" IsEnabled="False" x:Name="SaveBtn"/>
            </Grid>
        </Border>
        
        <!-- Results Display -->
        <Border Grid.Row="3" Grid.Column="1" Background="White" CornerRadius="12" 
                BorderBrush="#FFE9ECEF" BorderThickness="2" Padding="30" Margin="20,0,0,20">
            <StackPanel>
                <TextBlock Text="Calibration Results" FontSize="20" FontWeight="Bold" 
                           Foreground="#FF1B5E96" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                
                <TextBlock x:Name="EquationTxt" Text="Not calculated" FontFamily="Consolas" 
                           FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,15"
                           Foreground="#FF495057"/>
                
                <TextBlock x:Name="ErrorTxt" Text="" FontWeight="Bold" HorizontalAlignment="Center"
                           FontSize="14" Foreground="#FFDC3545"/>
                
                <Button Content="âŒ Cancel" Style="{StaticResource WarningButton}" 
                        Click="Cancel_Click" FontSize="16" 
                        Height="40" Width="150" Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Footer -->
        <Border Grid.Row="4" Grid.ColumnSpan="2" Background="#FF1B5E96" Padding="8,4" CornerRadius="0,0,12,12">
            <TextBlock Text="Â© 2025 AVL India Pvt Ltd. All rights reserved." 
                       Foreground="White" FontSize="10" Opacity="0.8" 
                       HorizontalAlignment="Right"/>
        </Border>
    </Grid>
</Window>
