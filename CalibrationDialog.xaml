<Window x:Class="SuspensionPCB_CAN_WPF.CalibrationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LMV Suspension Axle Weight Measurement System Monitor - Calibration" 
        Height="750" Width="700" MinHeight="750" MinWidth="700"
        WindowStartupLocation="CenterOwner" WindowState="Normal"
        ResizeMode="CanResize" Background="#FFF8F9FA" Icon="Assets/AVL_Icon.ico">

    <Window.Resources>
        <!-- Modern Professional Styles -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF1B5E96"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1A5588"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF164A7A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFB0B0B0"/>
                                <Setter Property="Foreground" Value="#FF666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FFDC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="InfoTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#FFDEE2E6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF1B5E96"/>
                            </Trigger>
                            <Trigger Property="IsReadOnly" Value="True">
                                <Setter Property="Background" Value="#FFF8F9FA"/>
                                <Setter Property="Foreground" Value="#FF6C757D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="StepGroupBox" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#FF1B5E96"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="#FF495057"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <StackPanel>
                                    <TextBlock Text="{TemplateBinding Header}" 
                                             FontWeight="{TemplateBinding FontWeight}"
                                             FontSize="16"
                                             Foreground="{TemplateBinding Foreground}"
                                             Margin="0,0,0,15"/>
                                    <ContentPresenter/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ActiveStepGroupBox" TargetType="GroupBox" BasedOn="{StaticResource StepGroupBox}">
            <Setter Property="BorderBrush" Value="#FF1B5E96"/>
            <Setter Property="Background" Value="#FFF0F8FF"/>
        </Style>
        
        <!-- Visual Stepper Styles -->
        <Style x:Key="StepperCircle" TargetType="Ellipse">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Stroke" Value="#FF6C757D"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="Fill" Value="Transparent"/>
        </Style>
        
        <Style x:Key="StepperCircleActive" TargetType="Ellipse" BasedOn="{StaticResource StepperCircle}">
            <Setter Property="Fill" Value="#FF1B5E96"/>
            <Setter Property="Stroke" Value="#FF1B5E96"/>
        </Style>
        
        <Style x:Key="StepperCircleCompleted" TargetType="Ellipse" BasedOn="{StaticResource StepperCircle}">
            <Setter Property="Fill" Value="#FF28A745"/>
            <Setter Property="Stroke" Value="#FF28A745"/>
        </Style>
        
        <Style x:Key="StepperLine" TargetType="Rectangle">
            <Setter Property="Height" Value="2"/>
            <Setter Property="Fill" Value="#FF6C757D"/>
        </Style>
        
        <Style x:Key="StepperLineCompleted" TargetType="Rectangle" BasedOn="{StaticResource StepperLine}">
            <Setter Property="Fill" Value="#FF28A745"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="Auto"/>  <!-- Instructions & Stepper -->
            <RowDefinition Height="*"/>     <!-- Main Content -->
            <RowDefinition Height="Auto"/>  <!-- Action Buttons & Results -->
            <RowDefinition Height="Auto"/>  <!-- Footer -->
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>  <!-- Action Buttons - Auto size -->
            <ColumnDefinition Width="*"/>     <!-- Results Panel - Takes remaining space -->
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#FF1B5E96" CornerRadius="8" Padding="20,15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="3" Opacity="0.3" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Image Source="Assets/AVL_Logo.jpg" Width="32" Height="32" Margin="0,0,15,0" 
                               VerticalAlignment="Center"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding Side, StringFormat='{}{0} Side Calibration'}" 
                                       FontSize="20" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Hardware Calibration Process" 
                                       FontSize="12" Foreground="#FFE3F2FD"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                <!-- Status Indicator and Info Button -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Fill="#FF27AE60" Margin="0,0,8,0">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#FF27AE60" Direction="270" ShadowDepth="2" Opacity="0.5" BlurRadius="4"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <TextBlock Text="Ready for Calibration" FontSize="12" FontWeight="SemiBold" 
                               Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    
                    <!-- Info Button -->
                    <Button x:Name="InfoBtn" Content="â„¹ï¸ Info" 
                            Background="#FF17A2B8" Foreground="White" 
                            BorderThickness="0" Padding="8,4" FontSize="10" FontWeight="SemiBold"
                            Click="InfoBtn_Click" Cursor="Hand" VerticalAlignment="Center"
                            ToolTip="Click for detailed calibration information">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="4" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF138496"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
            </StackPanel>
            </Grid>
        </Border>

        <!-- Stepper Only (Instructions moved to popup) -->
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#FFF8F9FA" CornerRadius="8" 
                BorderBrush="#FF1B5E96" BorderThickness="2" Padding="20,15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="6"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Step 1 -->
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,25,0">
                        <Grid Width="40" Height="40" HorizontalAlignment="Center" Margin="0,0,0,8">
                            <Ellipse x:Name="Step1Circle" Style="{StaticResource StepperCircleActive}" 
                                     HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#FF1B5E96" Direction="270" ShadowDepth="2" Opacity="0.4" BlurRadius="4"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <TextBlock Text="1" FontWeight="Bold" FontSize="16" Foreground="White" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <TextBlock Text="Capture Point 1" FontSize="11" FontWeight="SemiBold" 
                                   HorizontalAlignment="Center" Foreground="#FF1B5E96"/>
                        <TextBlock Text="Empty Platform" FontSize="10" 
                                   HorizontalAlignment="Center" Foreground="#FF6C757D" Margin="0,2,0,0"/>
                    </StackPanel>
                    
                    <!-- Connecting Line -->
                    <Rectangle x:Name="Step1Line" Width="30" Height="3" Fill="#FFE9ECEF" 
                               VerticalAlignment="Center" Margin="0,0,25,0">
                        <Rectangle.Effect>
                            <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="1" Opacity="0.2" BlurRadius="2"/>
                        </Rectangle.Effect>
                    </Rectangle>
                    
                    <!-- Step 2 -->
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Grid Width="40" Height="40" HorizontalAlignment="Center" Margin="0,0,0,8">
                            <Ellipse x:Name="Step2Circle" Style="{StaticResource StepperCircle}" 
                                     HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#FF6C757D" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="4"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <TextBlock Text="2" FontWeight="Bold" FontSize="16" Foreground="#FF6C757D" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <TextBlock Text="Capture Point 2" FontSize="11" FontWeight="SemiBold" 
                                   HorizontalAlignment="Center" Foreground="#FF1B5E96"/>
                        <TextBlock Text="Known Weight" FontSize="10" 
                                   HorizontalAlignment="Center" Foreground="#FF6C757D" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,0,15" MinHeight="250">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Side - Point 1 -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" 
                    BorderBrush="#FF1B5E96" BorderThickness="2" Padding="15" Margin="3">
                <Border.Effect>
                    <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="3" Opacity="0.2" BlurRadius="8"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Ellipse x:Name="Step1Ellipse" Width="22" Height="22" Fill="#FF1B5E96" Margin="0,0,6,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Step 1: Empty Platform" FontSize="13" FontWeight="Bold" 
                                       Foreground="#FF1B5E96"/>
                            <TextBlock Text="Capture baseline measurement" FontSize="9" 
                                       Foreground="#FF6C757D"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Current Raw ADC -->
                    <StackPanel Margin="0,0,0,8">
                        <TextBlock Text="Current Raw ADC Value:" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="#FF495057" Margin="0,0,0,3"/>
                        <TextBox x:Name="Point1RawTxt" FontSize="14" FontWeight="Bold" 
                                Text="{Binding Point1RawADC}" IsReadOnly="True" 
                                Background="#FFF8F9FA" BorderBrush="#FF17A2B8" BorderThickness="2"
                                Padding="6,4" TextAlignment="Center" Foreground="#FF17A2B8"
                                Width="100" HorizontalAlignment="Left"/>
                        <TextBlock Text="ðŸ”„ Live ADC reading from CAN" FontSize="8" 
                                   Foreground="#FF6C757D" HorizontalAlignment="Left" Margin="0,1,0,0"/>
                    </StackPanel>
                    
                    <!-- Known Weight Input -->
                    <StackPanel Margin="0,0,0,8">
                        <TextBlock Text="Known Weight (kg):" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="#FF495057" Margin="0,0,0,3"/>
                        <TextBox x:Name="Point1WeightTxt" FontSize="14" FontWeight="Bold" 
                                Text="{Binding Point1KnownWeight, UpdateSourceTrigger=PropertyChanged}" 
                                Background="#FFF8F9FA" BorderBrush="#FF1B5E96" BorderThickness="2"
                                Padding="6,4" TextAlignment="Center" Foreground="#FF1B5E96"
                                Width="100" HorizontalAlignment="Left"/>
                        <TextBlock Text="ðŸ’¡ Type 0 for empty platform" FontSize="9" 
                                   Foreground="#FF28A745" HorizontalAlignment="Left" Margin="0,3,0,0" FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <!-- Capture Button -->
                    <Button x:Name="CapturePoint1Btn" Content="ðŸ“¸ CAPTURE POINT 1" 
                            Style="{StaticResource SuccessButton}" 
                            Click="CapturePoint1_Click" FontSize="12" FontWeight="Bold"
                            Height="30" Margin="0,6,0,0" Padding="10,4" HorizontalAlignment="Left"/>
                    
                    <!-- Status -->
                    <TextBlock x:Name="Point1StatusTxt" Text="Ready to capture" FontSize="9" 
                               Foreground="#FF28A745" HorizontalAlignment="Left" 
                               Margin="0,6,0,0" FontWeight="SemiBold"/>
                    
                    <!-- Live ADC Display -->
                    <Border Margin="0,8,0,0" Background="#FFF0F8FF" CornerRadius="4" Padding="6" HorizontalAlignment="Left">
                        <StackPanel>
                            <TextBlock Text="ðŸ”„ Live ADC Reading" FontSize="9" FontWeight="Bold" 
                                       Foreground="#FF1B5E96" HorizontalAlignment="Left" Margin="0,0,0,3"/>
                            <TextBlock x:Name="Point1LiveADCTxt" Text="0" FontSize="12" FontWeight="Bold" 
                                       Foreground="#FF17A2B8" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Divider -->
            <Rectangle Grid.Column="1" Fill="#FFE9ECEF" Width="2" HorizontalAlignment="Center"/>
            
            <!-- Right Side - Point 2 -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" 
                    BorderBrush="#FF1B5E96" BorderThickness="2" Padding="15" Margin="3">
                <Border.Effect>
                    <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="3" Opacity="0.2" BlurRadius="8"/>
                </Border.Effect>
                <StackPanel>
                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Ellipse x:Name="Step2Ellipse" Width="22" Height="22" Fill="#FF6C757D" Margin="0,0,6,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Step 2: Known Weight" FontSize="13" FontWeight="Bold" 
                                       Foreground="#FF1B5E96"/>
                            <TextBlock Text="Add calibrated weight" FontSize="9" 
                                       Foreground="#FF6C757D"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Current Raw ADC -->
                    <StackPanel Margin="0,0,0,8">
                        <TextBlock Text="Current Raw ADC Value:" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="#FF495057" Margin="0,0,0,3"/>
                        <TextBox x:Name="Point2RawTxt" FontSize="14" FontWeight="Bold" 
                                Text="{Binding Point2RawADC}" IsReadOnly="True" 
                                Background="#FFF8F9FA" BorderBrush="#FF17A2B8" BorderThickness="2"
                                Padding="6,4" TextAlignment="Center" Foreground="#FF17A2B8"
                                Width="100" HorizontalAlignment="Left"/>
                        <TextBlock Text="ðŸ”„ Live ADC reading from CAN" FontSize="8" 
                                   Foreground="#FF6C757D" HorizontalAlignment="Left" Margin="0,1,0,0"/>
                    </StackPanel>
                    
                    <!-- Known Weight Input -->
                    <StackPanel Margin="0,0,0,8">
                        <TextBlock Text="Known Weight (kg):" FontSize="11" FontWeight="SemiBold" 
                                   Foreground="#FF495057" Margin="0,0,0,3"/>
                        <TextBox x:Name="Point2WeightTxt" FontSize="14" FontWeight="Bold" 
                                Text="{Binding Point2KnownWeight, UpdateSourceTrigger=PropertyChanged}" 
                                Background="#FFF8F9FA" BorderBrush="#FF1B5E96" BorderThickness="2"
                                Padding="6,4" TextAlignment="Center" Foreground="#FF1B5E96"
                                Width="100" HorizontalAlignment="Left"/>
                        <TextBlock Text="ðŸ’¡ Type weight you added (e.g., 1000)" FontSize="9" 
                                   Foreground="#FF28A745" HorizontalAlignment="Left" Margin="0,3,0,0" FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <!-- Capture Button -->
                    <Button x:Name="CapturePoint2Btn" Content="ðŸ“¸ CAPTURE POINT 2" 
                            Style="{StaticResource SuccessButton}" 
                            Click="CapturePoint2_Click" FontSize="12" FontWeight="Bold"
                            Height="30" Margin="0,6,0,0" Padding="10,4" IsEnabled="False" HorizontalAlignment="Left"/>
                    
                    <!-- Status -->
                    <TextBlock x:Name="Point2StatusTxt" Text="Waiting for Step 1" FontSize="9" 
                               Foreground="#FF6C757D" HorizontalAlignment="Left" 
                               Margin="0,6,0,0" FontWeight="SemiBold"/>
                    
                    <!-- Live ADC Display -->
                    <Border Margin="0,8,0,0" Background="#FFF0F8FF" CornerRadius="4" Padding="6" HorizontalAlignment="Left">
                        <StackPanel>
                            <TextBlock Text="ðŸ”„ Live ADC Reading" FontSize="9" FontWeight="Bold" 
                                       Foreground="#FF1B5E96" HorizontalAlignment="Left" Margin="0,0,0,3"/>
                            <TextBlock x:Name="Point2LiveADCTxt" Text="0" FontSize="12" FontWeight="Bold" 
                                       Foreground="#FF17A2B8" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>
            </StackPanel>
            </Border>
        </Grid>


        <!-- Action Buttons -->
        <Border Grid.Row="3" Grid.ColumnSpan="2" Background="White" CornerRadius="8" 
                BorderBrush="#FFE9ECEF" BorderThickness="2" Padding="20,15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="2" Opacity="0.15" BlurRadius="6"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- View Results Button (Left Side) -->
                <Button Grid.Column="0" x:Name="ViewResultsBtn" Content="ðŸ“Š View Results" 
                        Background="#FF17A2B8" Foreground="White" 
                        BorderThickness="0" Padding="12,6" FontSize="11" FontWeight="SemiBold"
                        Click="ViewResultsBtn_Click" Cursor="Hand" VerticalAlignment="Center"
                        ToolTip="Click to view calibration results (grey when not calculated)"
                        IsEnabled="False">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}" 
                                    CornerRadius="6" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#FF138496"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#FFB0B0B0"/>
                                    <Setter Property="Foreground" Value="#FF666666"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- Calculate Button (Centered) -->
                <Button Grid.Column="2" Content="ðŸ§® Calculate" 
                        Style="{StaticResource SuccessButton}" 
                        Click="CalculateCalibration_Click" FontSize="12" 
                        Height="32" Width="150" HorizontalAlignment="Center"/>
                
                <!-- Save and Cancel Buttons -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ’¾ Save" 
                            Style="{StaticResource SuccessButton}" 
                            Click="SaveCalibration_Click" FontSize="11" 
                            Height="28" Width="100" IsEnabled="False" x:Name="SaveBtn" Margin="0,0,10,0"/>
                    <Button Content="âŒ Cancel" Style="{StaticResource WarningButton}" 
                            Click="Cancel_Click" FontSize="11" 
                            Height="28" Width="100"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Footer -->
        <Border Grid.Row="4" Grid.ColumnSpan="2" Background="#FF1B5E96" Padding="8,4" CornerRadius="0,0,8,8">
            <Border.Effect>
                <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="4"/>
            </Border.Effect>
            <TextBlock Text="Â© 2025 AVL India Pvt Ltd. All rights reserved." 
                       Foreground="White" FontSize="9" Opacity="0.9" 
                       HorizontalAlignment="Right"/>
        </Border>
        
        <!-- Instructions Popup -->
    <Popup x:Name="InstructionsPopup" IsOpen="False" Placement="Center" PlacementTarget="{Binding ElementName=InfoBtn}"
           AllowsTransparency="True" PopupAnimation="Fade">
        <Border Background="White" CornerRadius="8" BorderBrush="#FF1B5E96" BorderThickness="2" 
                Padding="25" MaxWidth="500" MinWidth="400">
            <Border.Effect>
                <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="5" Opacity="0.3" BlurRadius="10"/>
            </Border.Effect>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="ðŸ“‹" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Calibration Instructions" FontSize="18" FontWeight="Bold" 
                               Foreground="#FF1B5E96" VerticalAlignment="Center"/>
                    <Button Content="âœ•" FontSize="14" FontWeight="Bold" Background="#FFDC3545" 
                            Foreground="White" BorderThickness="0" Width="25" Height="25" 
                            HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-5,-5,0"
                            Click="CloseInstructionsPopup_Click" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="12" 
                                        Width="25" Height="25">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Step 1 Instructions -->
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="Step 1: Empty Platform" FontSize="14" FontWeight="Bold" 
                                   Foreground="#FF1B5E96" Margin="0,0,0,10"/>
                        <TextBlock Text="1. Remove all weight from platform" FontSize="12" 
                                   Foreground="#FF495057" Margin="0,0,0,5"/>
                        <TextBlock Text="2. Type '0' in left weight field" FontSize="12" 
                                   Foreground="#FF495057" Margin="0,0,0,5"/>
                        <TextBlock Text="3. Click 'Capture Point 1'" FontSize="12" 
                                   Foreground="#FF495057"/>
                    </StackPanel>
                    
                    <!-- Step 2 Instructions -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Step 2: Known Weight" FontSize="14" FontWeight="Bold" 
