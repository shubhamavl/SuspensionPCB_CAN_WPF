<Window x:Class="SuspensionPCB_CAN_WPF.CalibrationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LMV Suspension Axle Weight Measurement System Monitor - Calibration" 
        Height="750" Width="700" MinHeight="750" MinWidth="700"
        WindowStartupLocation="CenterOwner" WindowState="Normal"
        ResizeMode="CanResize" Background="#FFF8F9FA" Icon="Assets/AVL_Icon.ico">

    <Window.Resources>
        <!-- Modern Professional Styles -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF1B5E96"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1A5588"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF164A7A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFB0B0B0"/>
                                <Setter Property="Foreground" Value="#FF666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FFDC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="InfoTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#FFDEE2E6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF1B5E96"/>
                            </Trigger>
                            <Trigger Property="IsReadOnly" Value="True">
                                <Setter Property="Background" Value="#FFF8F9FA"/>
                                <Setter Property="Foreground" Value="#FF6C757D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="StepGroupBox" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#FF1B5E96"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="#FF495057"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <StackPanel>
                                    <TextBlock Text="{TemplateBinding Header}" 
                                             FontWeight="{TemplateBinding FontWeight}"
                                             FontSize="16"
                                             Foreground="{TemplateBinding Foreground}"
                                             Margin="0,0,0,15"/>
                                    <ContentPresenter/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ActiveStepGroupBox" TargetType="GroupBox" BasedOn="{StaticResource StepGroupBox}">
            <Setter Property="BorderBrush" Value="#FF1B5E96"/>
            <Setter Property="Background" Value="#FFF0F8FF"/>
        </Style>
        
        <!-- Visual Stepper Styles -->
        <Style x:Key="StepperCircle" TargetType="Ellipse">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Stroke" Value="#FF6C757D"/>
            <Setter Property="StrokeThickness" Value="2"/>
            <Setter Property="Fill" Value="Transparent"/>
        </Style>
        
        <Style x:Key="StepperCircleActive" TargetType="Ellipse" BasedOn="{StaticResource StepperCircle}">
            <Setter Property="Fill" Value="#FF1B5E96"/>
            <Setter Property="Stroke" Value="#FF1B5E96"/>
        </Style>
        
        <Style x:Key="StepperCircleCompleted" TargetType="Ellipse" BasedOn="{StaticResource StepperCircle}">
            <Setter Property="Fill" Value="#FF28A745"/>
            <Setter Property="Stroke" Value="#FF28A745"/>
        </Style>
        
        <Style x:Key="StepperLine" TargetType="Rectangle">
            <Setter Property="Height" Value="2"/>
            <Setter Property="Fill" Value="#FF6C757D"/>
        </Style>
        
        <Style x:Key="StepperLineCompleted" TargetType="Rectangle" BasedOn="{StaticResource StepperLine}">
            <Setter Property="Fill" Value="#FF28A745"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="Auto"/>  <!-- Instructions & Stepper -->
            <RowDefinition Height="*"/>     <!-- Main Content -->
            <RowDefinition Height="Auto"/>  <!-- Action Buttons & Results -->
            <RowDefinition Height="Auto"/>  <!-- Footer -->
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>  <!-- Action Buttons - Auto size -->
            <ColumnDefinition Width="*"/>     <!-- Results Panel - Takes remaining space -->
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#FF1B5E96" CornerRadius="8" Padding="20,15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="3" Opacity="0.3" BlurRadius="8"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Image Source="Assets/AVL_Logo.jpg" Width="32" Height="32" Margin="0,0,15,0" 
                               VerticalAlignment="Center"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding Side, StringFormat='{}{0} Side Calibration'}" 
                                       FontSize="20" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Hardware Calibration Process" 
                                       FontSize="12" Foreground="#FFE3F2FD"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                
                <!-- Status Indicator and Info Button -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Fill="#FF27AE60" Margin="0,0,8,0">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="#FF27AE60" Direction="270" ShadowDepth="2" Opacity="0.5" BlurRadius="4"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <TextBlock Text="Ready for Calibration" FontSize="12" FontWeight="SemiBold" 
                               Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    
                    <!-- Info Button -->
                    <Button x:Name="InfoBtn" Content="â„¹ï¸ Info" 
                            Background="#FF17A2B8" Foreground="White" 
                            BorderThickness="0" Padding="8,4" FontSize="10" FontWeight="SemiBold"
                            Click="InfoBtn_Click" Cursor="Hand" VerticalAlignment="Center"
                            ToolTip="Click for detailed calibration information">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="4" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF138496"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
            </StackPanel>
            </Grid>
        </Border>

        <!-- Point Count and Add Button -->
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#FFF8F9FA" CornerRadius="8" 
                BorderBrush="#FF1B5E96" BorderThickness="2" Padding="20,15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="2" Opacity="0.2" BlurRadius="6"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Calibration Points: " FontSize="12" FontWeight="SemiBold" Foreground="#FF495057" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding CapturedPointCount}" FontSize="12" FontWeight="Bold" Foreground="#FF1B5E96" Margin="0,0,3,0"/>
                    <TextBlock Text="/" FontSize="12" Foreground="#FF6C757D" Margin="0,0,3,0"/>
                    <TextBlock Text="{Binding Points.Count}" FontSize="12" FontWeight="Bold" Foreground="#FF6C757D"/>
                </StackPanel>
                <Button Grid.Column="1" x:Name="AddPointBtn" Content="âž• Add Point" 
                        Background="#FF28A745" Foreground="White" 
                        BorderThickness="0" Padding="12,6" FontSize="11" FontWeight="SemiBold"
                        Click="AddPoint_Click" Cursor="Hand" VerticalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF218838"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content Area - Dynamic Point List -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="White" CornerRadius="8" 
                BorderBrush="#FF1B5E96" BorderThickness="2" Padding="15" Margin="0,0,0,15" MinHeight="300">
            <Border.Effect>
                <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="3" Opacity="0.2" BlurRadius="8"/>
            </Border.Effect>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="PointsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FFF8F9FA" CornerRadius="6" BorderBrush="#FFDEE2E6" 
                                    BorderThickness="2" Padding="15" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Point Number Badge -->
                                    <Border Grid.Column="0" Width="40" Height="40" 
                                            CornerRadius="20" Margin="0,0,15,0" VerticalAlignment="Center">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#FF1B5E96"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCaptured}" Value="True">
                                                        <Setter Property="Background" Value="#FF28A745"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding PointNumber}" FontSize="16" FontWeight="Bold" 
                                                   Foreground="White" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- Point Details -->
                                    <StackPanel Grid.Column="1">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="Point " FontSize="13" FontWeight="Bold" Foreground="#FF1B5E96"/>
                                            <TextBlock Text="{Binding PointNumber}" FontSize="13" FontWeight="Bold" Foreground="#FF1B5E96"/>
                                        </StackPanel>
                                        
                                        <Grid Margin="0,0,0,8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Live ADC -->
                                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                                <TextBlock Text="Live ADC:" FontSize="10" Foreground="#FF6C757D" Margin="0,0,0,3"/>
                                                <TextBox Text="{Binding RawADC, Mode=OneWay}" IsReadOnly="True" 
                                                         Background="#FFF0F8FF" BorderBrush="#FF17A2B8" 
                                                         BorderThickness="1" Padding="4" TextAlignment="Center" 
                                                         FontSize="12" FontWeight="Bold" Foreground="#FF17A2B8"/>
                                            </StackPanel>
                                            
                                            <!-- Weight Input -->
                                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                                <TextBlock Text="Weight (kg):" FontSize="10" Foreground="#FF6C757D" Margin="0,0,0,3"/>
                                                <TextBox Text="{Binding KnownWeight, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                                         Background="White" BorderBrush="#FF1B5E96" 
                                                         BorderThickness="1" Padding="4" TextAlignment="Center" 
                                                         FontSize="12" FontWeight="Bold" Foreground="#FF1B5E96"/>
                                            </StackPanel>
                                            
                                            <!-- Capture Button -->
                                            <Button Grid.Column="2" Content="ðŸ“¸ Capture" 
                                                    Background="#FF28A745" Foreground="White" 
                                                    BorderThickness="0" Padding="10,6" FontSize="10" FontWeight="SemiBold"
                                                    Click="CapturePoint_Click" DataContext="{Binding}"
                                                    VerticalAlignment="Bottom" Height="28">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsCaptured}" Value="True">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                CornerRadius="4" 
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" 
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FF218838"/>
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter Property="Background" Value="#FFB0B0B0"/>
                                                                <Setter Property="Foreground" Value="#FF666666"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </Grid>
                                        
                                        <!-- Status -->
                                        <TextBlock Text="{Binding StatusText}" FontSize="9" 
                                                   FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#FF6C757D"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCaptured}" Value="True">
                                                            <Setter Property="Foreground" Value="#FF28A745"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                    
                                    <!-- Delete Button -->
                                    <Button Grid.Column="2" Content="âœ•" FontSize="12" FontWeight="Bold"
                                            Background="#FFDC3545" Foreground="White" 
                                            BorderThickness="0" Width="25" Height="25" 
                                            Click="RemovePoint_Click" DataContext="{Binding}"
                                            ToolTip="Remove this point" Margin="5,0,0,0"
                                            VerticalAlignment="Top">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="12" Width="25" Height="25">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FFC82333"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>


        <!-- Action Buttons -->
        <Border Grid.Row="3" Grid.ColumnSpan="2" Background="White" CornerRadius="8" 
                BorderBrush="#FFE9ECEF" BorderThickness="2" Padding="20,15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="2" Opacity="0.15" BlurRadius="6"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- View Results Button (Left Side) -->
                <Button Grid.Column="0" x:Name="ViewResultsBtn" Content="ðŸ“Š View Results" 
                        Background="#FF17A2B8" Foreground="White" 
                        BorderThickness="0" Padding="12,6" FontSize="11" FontWeight="SemiBold"
                        Click="ViewResultsBtn_Click" Cursor="Hand" VerticalAlignment="Center"
                        ToolTip="Click to view calibration results (grey when not calculated)"
                        IsEnabled="False">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}" 
                                    CornerRadius="6" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#FF138496"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#FFB0B0B0"/>
                                    <Setter Property="Foreground" Value="#FF666666"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- Calculate Button (Centered) -->
                <Button Grid.Column="2" x:Name="CalculateBtn" Content="ðŸ§® Calculate" 
                        Style="{StaticResource SuccessButton}" 
                        Click="CalculateCalibration_Click" FontSize="12" 
                        Height="32" Width="150" HorizontalAlignment="Center" IsEnabled="False"/>
                
                <!-- Save and Cancel Buttons -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ’¾ Save" 
                            Style="{StaticResource SuccessButton}" 
                            Click="SaveCalibration_Click" FontSize="11" 
                            Height="28" Width="100" IsEnabled="False" x:Name="SaveBtn" Margin="0,0,10,0"/>
                    <Button Content="âŒ Cancel" Style="{StaticResource WarningButton}" 
                            Click="Cancel_Click" FontSize="11" 
                            Height="28" Width="100"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Footer -->
        <Border Grid.Row="4" Grid.ColumnSpan="2" Background="#FF1B5E96" Padding="8,4" CornerRadius="0,0,8,8">
            <Border.Effect>
                <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="4"/>
            </Border.Effect>
            <TextBlock Text="Â© 2025 AVL India Pvt Ltd. All rights reserved." 
                       Foreground="White" FontSize="9" Opacity="0.9" 
                       HorizontalAlignment="Right"/>
        </Border>
        
        <!-- Instructions Popup -->
    <Popup x:Name="InstructionsPopup" IsOpen="False" Placement="Center" PlacementTarget="{Binding ElementName=InfoBtn}"
           AllowsTransparency="True" PopupAnimation="Fade">
        <Border Background="White" CornerRadius="8" BorderBrush="#FF1B5E96" BorderThickness="2" 
                Padding="25" MaxWidth="500" MinWidth="400">
            <Border.Effect>
                <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="5" Opacity="0.3" BlurRadius="10"/>
            </Border.Effect>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="ðŸ“‹" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Calibration Instructions" FontSize="18" FontWeight="Bold" 
                               Foreground="#FF1B5E96" VerticalAlignment="Center"/>
                    <Button Content="âœ•" FontSize="14" FontWeight="Bold" Background="#FFDC3545" 
                            Foreground="White" BorderThickness="0" Width="25" Height="25" 
                            HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-5,-5,0"
                            Click="CloseInstructionsPopup_Click" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="12" 
                                        Width="25" Height="25">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
                
                <StackPanel>
                    <TextBlock Text="Multi-Point Calibration Instructions" FontSize="14" FontWeight="Bold" 
                               Foreground="#FF1B5E96" Margin="0,0,0,15"/>
                    <TextBlock Text="1. Click 'Add Point' to create a new calibration point" FontSize="12" 
                               Foreground="#FF495057" Margin="0,0,0,8"/>
                    <TextBlock Text="2. Enter the known weight (kg) for this point" FontSize="12" 
                               Foreground="#FF495057" Margin="0,0,0,8"/>
                    <TextBlock Text="3. Wait for stable ADC reading, then click 'Capture'" FontSize="12" 
                               Foreground="#FF495057" Margin="0,0,0,8"/>
                    <TextBlock Text="4. Repeat steps 1-3 for additional points (minimum 1 point required)" FontSize="12" 
                               Foreground="#FF495057" Margin="0,0,0,8"/>
                    <TextBlock Text="5. Click 'Calculate' to perform least-squares linear regression" FontSize="12" 
                               Foreground="#FF495057" Margin="0,0,0,8"/>
                    <TextBlock Text="6. Review RÂ² value and quality metrics in results" FontSize="12" 
                               Foreground="#FF495057" Margin="0,0,0,8"/>
                    <TextBlock Text="ðŸ’¡ Tip: More points (3-5+) improve accuracy and reduce noise" FontSize="11" 
                               Foreground="#FF17A2B8" FontStyle="Italic" Margin="0,10,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Popup>
    
    <!-- Results Popup -->
    <Popup x:Name="ResultsPopup" IsOpen="False" Placement="Center" PlacementTarget="{Binding ElementName=ViewResultsBtn}"
           AllowsTransparency="True" PopupAnimation="Fade">
        <Border Background="White" CornerRadius="8" BorderBrush="#FF1B5E96" BorderThickness="2" 
                Padding="25" MaxWidth="600" MinWidth="500">
            <Border.Effect>
                <DropShadowEffect Color="#FF000000" Direction="270" ShadowDepth="5" Opacity="0.3" BlurRadius="10"/>
            </Border.Effect>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="ðŸ“Š" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBlock Text="Calibration Results" FontSize="18" FontWeight="Bold" 
                               Foreground="#FF1B5E96" VerticalAlignment="Center"/>
                    <Button Content="âœ•" FontSize="14" FontWeight="Bold" Background="#FFDC3545" 
                            Foreground="White" BorderThickness="0" Width="25" Height="25" 
                            HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-5,-5,0"
                            Click="CloseResultsPopup_Click" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="12" 
                                        Width="25" Height="25">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
                
                <!-- Equation Display -->
                <Border Background="#FFF8F9FA" CornerRadius="4" Padding="15" Margin="0,0,0,15">
