<Window x:Class="SuspensionPCB_CAN_WPF.CalibrationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="2-Point Calibration" Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF1B5E96"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF28A745"/>
        </Style>
        
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FFDC3545"/>
        </Style>
        
        <Style x:Key="InfoTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderBrush" Value="#FF1B5E96"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="{Binding Side, StringFormat='2-Point Calibration - {0} Side'}" 
                   FontSize="18" FontWeight="Bold" Foreground="#FF1B5E96" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Warning -->
        <Border Grid.Row="1" Background="#FFF8D7" BorderBrush="#FF856404" BorderThickness="1" 
                CornerRadius="5" Padding="10" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="âš  Important: Use KNOWN weights for calibration" 
                           FontWeight="Bold" Foreground="#FF856404" HorizontalAlignment="Center"/>
                <TextBlock Text="Do NOT tare before calibrating" 
                           Foreground="#FF856404" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Point 1 -->
        <GroupBox Grid.Row="2" Header="Step 1: Light Load (or platform only)" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <TextBlock Text="Current Raw ADC:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="Point1RawTxt" Style="{StaticResource InfoTextBox}" 
                         Text="{Binding Point1RawADC}" IsReadOnly="True" Margin="0,0,0,10"/>
                
                <TextBlock Text="Known Weight (kg):" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="Point1WeightTxt" Style="{StaticResource InfoTextBox}" 
                         Text="{Binding Point1KnownWeight}" Margin="0,0,0,10"/>
                
                <Button Content="Capture Point 1" Style="{StaticResource ModernButton}" 
                        Click="CapturePoint1_Click" HorizontalAlignment="Center"/>
            </StackPanel>
        </GroupBox>

        <!-- Point 2 -->
        <GroupBox Grid.Row="3" Header="Step 2: Heavy Load (add calibration weight)" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <TextBlock Text="Current Raw ADC:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="Point2RawTxt" Style="{StaticResource InfoTextBox}" 
                         Text="{Binding Point2RawADC}" IsReadOnly="True" Margin="0,0,0,10"/>
                
                <TextBlock Text="Known Weight (kg):" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="Point2WeightTxt" Style="{StaticResource InfoTextBox}" 
                         Text="{Binding Point2KnownWeight}" Margin="0,0,0,10"/>
                
                <Button Content="Capture Point 2" Style="{StaticResource ModernButton}" 
                        Click="CapturePoint2_Click" HorizontalAlignment="Center"/>
            </StackPanel>
        </GroupBox>

        <!-- Calculate Button -->
        <Button Grid.Row="4" Content="Calculate Calibration" Style="{StaticResource SuccessButton}" 
                Click="CalculateCalibration_Click" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Results -->
        <GroupBox Grid.Row="5" Header="Calibration Result" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <TextBlock x:Name="EquationTxt" Text="Not calculated" FontFamily="Consolas" 
                           FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                
                <TextBlock x:Name="ErrorTxt" Text="" FontWeight="Bold" HorizontalAlignment="Center"/>
            </StackPanel>
        </GroupBox>

        <!-- Current Raw Display -->
        <GroupBox Grid.Row="6" Header="Current Raw ADC" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <TextBlock x:Name="CurrentRawTxt" Text="--" FontSize="16" FontWeight="Bold" 
                           HorizontalAlignment="Center" Foreground="#FF1B5E96"/>
                <Button Content="Refresh" Style="{StaticResource ModernButton}" 
                        Click="RefreshRaw_Click" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Status -->
        <TextBlock Grid.Row="7" x:Name="StatusTxt" Text="Ready to calibrate" 
                   FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Save Calibration" Style="{StaticResource SuccessButton}" 
                    Click="SaveCalibration_Click" IsEnabled="False" x:Name="SaveBtn"/>
            <Button Content="Cancel" Style="{StaticResource WarningButton}" 
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
