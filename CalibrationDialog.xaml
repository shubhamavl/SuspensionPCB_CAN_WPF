<Window x:Class="SuspensionPCB_CAN_WPF.CalibrationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="2-Point Calibration" Height="650" Width="500" MinHeight="600" MinWidth="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#FFF8F9FA">

    <Window.Resources>
        <!-- Modern Professional Styles -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF1B5E96"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1A5588"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF164A7A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFB0B0B0"/>
                                <Setter Property="Foreground" Value="#FF666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="WarningButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FFDC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="InfoTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="#FFDEE2E6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF1B5E96"/>
                            </Trigger>
                            <Trigger Property="IsReadOnly" Value="True">
                                <Setter Property="Background" Value="#FFF8F9FA"/>
                                <Setter Property="Foreground" Value="#FF6C757D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="StepGroupBox" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#FFE9ECEF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="#FF495057"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="White" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8"
                                    Padding="{TemplateBinding Padding}">
                                <StackPanel>
                                    <TextBlock Text="{TemplateBinding Header}" 
                                             FontWeight="{TemplateBinding FontWeight}"
                                             FontSize="16"
                                             Foreground="{TemplateBinding Foreground}"
                                             Margin="0,0,0,15"/>
                                    <ContentPresenter/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ActiveStepGroupBox" TargetType="GroupBox" BasedOn="{StaticResource StepGroupBox}">
            <Setter Property="BorderBrush" Value="#FF1B5E96"/>
            <Setter Property="Background" Value="#FFF0F8FF"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF1B5E96" CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="{Binding Side, StringFormat='2-Point Calibration - {0} Side'}" 
                           FontSize="20" FontWeight="Bold" Foreground="White" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Hardware Calibration Process" 
                           FontSize="12" Foreground="#FFE3F2FD" 
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Warning -->
        <Border Grid.Row="1" Background="#FFF8D7" BorderBrush="#FF856404" BorderThickness="2" 
                CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                    <TextBlock Text="âš " FontSize="16" Foreground="#FF856404" Margin="0,0,8,0"/>
                    <TextBlock Text="Important: Use KNOWN weights for calibration" 
                               FontWeight="Bold" Foreground="#FF856404"/>
                </StackPanel>
                <TextBlock Text="Do NOT tare before calibrating - this is hardware calibration, not daily zero-out" 
                           Foreground="#FF856404" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="Step 1: Empty platform (0 kg) | Step 2: Add known weight (e.g., 50 kg)" 
                           Foreground="#FF856404" HorizontalAlignment="Center" FontSize="11"/>
            </StackPanel>
        </Border>

        <!-- Scrollable Content Area -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Point 1 -->
                <GroupBox x:Name="Point1GroupBox" Style="{StaticResource StepGroupBox}" 
                         Header="Step 1: Light Load (or platform only)">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Current Raw ADC -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Current Raw ADC:" 
                                       FontWeight="Bold" Margin="0,0,10,8" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="Point1RawTxt" 
                                     Style="{StaticResource InfoTextBox}" 
                                     Text="{Binding Point1RawADC}" IsReadOnly="True" Margin="10,0,0,8"/>
                            
                            <!-- Known Weight -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Known Weight (kg):" 
                                       FontWeight="Bold" Margin="0,0,10,8" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="Point1WeightTxt" 
                                     Style="{StaticResource InfoTextBox}" 
                                     Text="{Binding Point1KnownWeight, UpdateSourceTrigger=PropertyChanged}" 
                                     Margin="10,0,0,8" 
                                     ToolTip="Enter the known weight for this calibration point (integer only)"/>
                        </Grid>
                        
                        <Button Content="Capture Point 1" Style="{StaticResource ModernButton}" 
                                Click="CapturePoint1_Click" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Point 2 -->
                <GroupBox x:Name="Point2GroupBox" Style="{StaticResource StepGroupBox}" 
                         Header="Step 2: Heavy Load (add calibration weight)">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Current Raw ADC -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Current Raw ADC:" 
                                       FontWeight="Bold" Margin="0,0,10,8" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="Point2RawTxt" 
                                     Style="{StaticResource InfoTextBox}" 
                                     Text="{Binding Point2RawADC}" IsReadOnly="True" Margin="10,0,0,8"/>
                            
                            <!-- Known Weight -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Known Weight (kg):" 
                                       FontWeight="Bold" Margin="0,0,10,8" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="Point2WeightTxt" 
                                     Style="{StaticResource InfoTextBox}" 
                                     Text="{Binding Point2KnownWeight, UpdateSourceTrigger=PropertyChanged}" 
                                     Margin="10,0,0,8" 
                                     ToolTip="Enter the known weight for this calibration point (integer only)"/>
                        </Grid>
                        
                        <Button Content="Capture Point 2" Style="{StaticResource ModernButton}" 
                                Click="CapturePoint2_Click" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Calculate Button -->
                <Button Content="Calculate Calibration" Style="{StaticResource SuccessButton}" 
                        Click="CalculateCalibration_Click" HorizontalAlignment="Center" Margin="0,20,0,20"/>

                <!-- Results -->
                <GroupBox Header="Calibration Result" Style="{StaticResource StepGroupBox}">
                    <StackPanel>
                        <TextBlock x:Name="EquationTxt" Text="Not calculated" FontFamily="Consolas" 
                                   FontSize="14" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        
                        <TextBlock x:Name="ErrorTxt" Text="" FontWeight="Bold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </GroupBox>

                <!-- Current Raw Display -->
                <GroupBox Header="Live Raw ADC Monitor" Style="{StaticResource StepGroupBox}">
                    <StackPanel>
                        <TextBlock x:Name="CurrentRawTxt" Text="--" FontSize="18" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Foreground="#FF1B5E96" Margin="0,0,0,10"/>
                        <Button Content="Refresh" Style="{StaticResource ModernButton}" 
                                Click="RefreshRaw_Click" HorizontalAlignment="Center"/>
                    </StackPanel>
                </GroupBox>

                <!-- Status -->
                <Border Background="#FFF0F8FF" BorderBrush="#FF1B5E96" BorderThickness="1" 
                        CornerRadius="6" Padding="15" Margin="0,20,0,0">
                    <TextBlock x:Name="StatusTxt" Text="Ready to calibrate" 
                               FontWeight="Bold" HorizontalAlignment="Center" 
                               Foreground="#FF1B5E96"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Buttons -->
        <Border Grid.Row="3" Background="White" BorderBrush="#FFE9ECEF" BorderThickness="0,1,0,0" 
                Padding="20,15,20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Save Calibration" Style="{StaticResource SuccessButton}" 
                        Click="SaveCalibration_Click" IsEnabled="False" x:Name="SaveBtn" MinWidth="140"/>
                <Button Content="Cancel" Style="{StaticResource WarningButton}" 
                        Click="Cancel_Click" MinWidth="100"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
