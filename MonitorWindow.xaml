<Window x:Class="SuspensionPCB_CAN_WPF.MonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CAN Message Monitor" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF1B5E96" Padding="15" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="CAN Message Monitor" FontSize="20" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Real-time CAN message monitoring and analysis" FontSize="12" 
                           Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Message Log -->
            <GroupBox Grid.Column="0" Header="CAN Message Log" Padding="10" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Filters -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Filter ID:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="FilterIdTxt" Width="80" 
                             TextChanged="FilterIdTxt_TextChanged"/>
                        <CheckBox x:Name="ShowTxChk" Content="TX" IsChecked="True" 
                              Margin="15,0,5,0" Checked="FilterChanged" 
                              Unchecked="FilterChanged"/>
                        <CheckBox x:Name="ShowRxChk" Content="RX" IsChecked="True" 
                              Margin="5,0,15,0" Checked="FilterChanged" 
                              Unchecked="FilterChanged"/>

                        <TextBlock Text="Count:" Margin="10,0,5,0"/>
                        <TextBlock x:Name="MessageCountTxt" Text="0" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Message Grid -->
                    <DataGrid Grid.Row="1" x:Name="MessageGrid" 
                          AutoGenerateColumns="False" IsReadOnly="True"
                          ItemsSource="{Binding FilteredMessages}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="90"/>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="60"/>
                            <DataGridTextColumn Header="Dir" Binding="{Binding Direction}" Width="40"/>
                            <DataGridTextColumn Header="Data" Binding="{Binding Data}" Width="200"/>
                            <DataGridTextColumn Header="Decoded" Binding="{Binding Decoded}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>

            <!-- Weight Data Display -->
            <GroupBox Grid.Column="1" Header="Live Weight Data" Padding="10">
                <StackPanel>
                    <!-- Left Side -->
                    <Border Background="#FFF8F9FA" BorderBrush="#FF1B5E96" BorderThickness="1" 
                            CornerRadius="5" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="LEFT SIDE" FontWeight="Bold" 
                                       Foreground="#FF1B5E96" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Raw ADC -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Raw ADC:" FontWeight="Bold" Margin="0,0,5,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LeftRawTxt" Text="0" FontWeight="Bold" Margin="5,0,0,5"/>

                                <!-- Calibrated Weight -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Calibrated:" FontWeight="Bold" Margin="0,0,5,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="LeftCalibratedTxt" Text="0.0 kg" FontWeight="Bold" Margin="5,0,0,5"/>

                                <!-- Display Weight (after tare) -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Display:" FontWeight="Bold" Margin="0,0,5,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="LeftDisplayTxt" Text="0.0 kg" FontWeight="Bold" 
                                           Foreground="#FF28A745" Margin="5,0,0,5"/>

                                <!-- Tare Status -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Tare:" FontWeight="Bold" Margin="0,0,5,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="LeftTareStatusTxt" Text="- Not Tared" FontSize="10" Margin="5,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Right Side -->
                    <Border Background="#FFF8F9FA" BorderBrush="#FF28A745" BorderThickness="1" 
                            CornerRadius="5" Padding="10" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="RIGHT SIDE" FontWeight="Bold" 
                                       Foreground="#FF28A745" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Raw ADC -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Raw ADC:" FontWeight="Bold" Margin="0,0,5,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="RightRawTxt" Text="0" FontWeight="Bold" Margin="5,0,0,5"/>

                                <!-- Calibrated Weight -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Calibrated:" FontWeight="Bold" Margin="0,0,5,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="RightCalibratedTxt" Text="0.0 kg" FontWeight="Bold" Margin="5,0,0,5"/>

                                <!-- Display Weight (after tare) -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Display:" FontWeight="Bold" Margin="0,0,5,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="RightDisplayTxt" Text="0.0 kg" FontWeight="Bold" 
                                           Foreground="#FF28A745" Margin="5,0,0,5"/>

                                <!-- Tare Status -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Tare:" FontWeight="Bold" Margin="0,0,5,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="RightTareStatusTxt" Text="- Not Tared" FontSize="10" Margin="5,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Summary -->
                    <Border Background="#FFF8F9FA" BorderBrush="#FF6C757D" BorderThickness="1" 
                            CornerRadius="5" Padding="10">
                        <StackPanel>
                            <TextBlock Text="SUMMARY" FontWeight="Bold" 
                                       Foreground="#FF6C757D" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <!-- Total Weight -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Total:" FontWeight="Bold" Margin="0,0,5,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TotalWeightTxt" Text="0.0 kg" FontWeight="Bold" 
                                           Foreground="#FF28A745" Margin="5,0,0,5"/>

                                <!-- Balance -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Balance:" FontWeight="Bold" Margin="0,0,5,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="BalanceTxt" Text="50% L / 50% R" FontWeight="Bold" 
                                           Foreground="#FF6C757D" Margin="5,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
