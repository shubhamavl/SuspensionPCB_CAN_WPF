<Window x:Class="SuspensionPCB_CAN_WPF.MonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CAN Message Monitor" Height="700" Width="1200" 
        MinWidth="1000" MinHeight="600" MaxWidth="2000" MaxHeight="1200"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
        Background="#FFF5F5F5">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MinHeight" Value="38"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center" 
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF34495E"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#40000000"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1A252F"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF1B5E96" Padding="20" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="CAN Message Monitor" FontSize="22" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Real-time CAN message monitoring and analysis" FontSize="14" 
                           Foreground="White" HorizontalAlignment="Center" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Message Log -->
            <GroupBox Grid.Column="0" Header="CAN Message Log" Padding="15" Margin="0,0,10,0"
                      Background="White" BorderBrush="#FFE0E0E0" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Filters -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Filter ID:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="FilterIdTxt" Width="80" 
                             TextChanged="FilterIdTxt_TextChanged"/>
                        <CheckBox x:Name="ShowTxChk" Content="TX" IsChecked="True" 
                              Margin="15,0,5,0" Checked="FilterChanged" 
                              Unchecked="FilterChanged"/>
                        <CheckBox x:Name="ShowRxChk" Content="RX" IsChecked="True" 
                              Margin="5,0,15,0" Checked="FilterChanged" 
                              Unchecked="FilterChanged"/>

                        <TextBlock Text="Count:" Margin="10,0,5,0"/>
                        <TextBlock x:Name="MessageCountTxt" Text="0" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Message Grid -->
                    <DataGrid Grid.Row="1" x:Name="MessageGrid" 
                          AutoGenerateColumns="False" IsReadOnly="True"
                          EnableRowVirtualization="True"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          AlternatingRowBackground="#FFF8F9FA"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          ItemsSource="{Binding FilteredMessages}">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="MinHeight" Value="25"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Direction}" Value="TX">
                                        <Setter Property="Foreground" Value="#FF1565C0"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Background" Value="#FFE3F2FD"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Direction}" Value="RX">
                                        <Setter Property="Foreground" Value="#FF1B5E20"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Background" Value="#FFE8F5E9"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="80" MinWidth="80"/>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="60" MinWidth="60"/>
                            <DataGridTextColumn Header="Dir" Binding="{Binding Direction}" Width="40" MinWidth="40"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding MessageType}" Width="100" MinWidth="100"/>
                            <DataGridTextColumn Header="Data" Binding="{Binding Data}" Width="150" MinWidth="150"/>
                            <DataGridTextColumn Header="Decoded" Binding="{Binding Decoded}" Width="*" MinWidth="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>

            <!-- Weight Data Display Column -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Weight Data (scrollable if needed) -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                    <GroupBox Header="Live Weight Data" Padding="15" Background="White" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <StackPanel>
                            <!-- Left Side -->
                            <Border Background="#FFF8F9FA" BorderBrush="#FF1B5E96" BorderThickness="1" 
                                    CornerRadius="5" Padding="10" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="LEFT SIDE" FontWeight="Bold" 
                                               Foreground="#FF1B5E96" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Raw ADC -->
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Raw ADC:" FontWeight="Bold" Margin="0,0,5,5"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="LeftRawTxt" Text="0" FontWeight="Bold" Margin="5,0,0,5"/>

                                        <!-- Calibrated Weight -->
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Calibrated:" FontWeight="Bold" Margin="0,0,5,5"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="LeftCalibratedTxt" Text="0 kg" FontWeight="Bold" Margin="5,0,0,5"/>

                                        <!-- Display Weight (after tare) -->
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Display:" FontWeight="Bold" Margin="0,0,5,5"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="LeftDisplayTxt" Text="0 kg" FontWeight="Bold" 
                                                   Foreground="#FF28A745" Margin="5,0,0,5"/>

                                        <!-- Tare Status -->
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Tare:" FontWeight="Bold" Margin="0,0,5,0"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="LeftTareStatusTxt" Text="- Not Tared" FontSize="10" Margin="5,0,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Right Side -->
                            <Border Background="#FFF8F9FA" BorderBrush="#FF28A745" BorderThickness="1" 
                                    CornerRadius="5" Padding="10" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="RIGHT SIDE" FontWeight="Bold" 
                                               Foreground="#FF28A745" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Raw ADC -->
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Raw ADC:" FontWeight="Bold" Margin="0,0,5,5"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="RightRawTxt" Text="0" FontWeight="Bold" Margin="5,0,0,5"/>

                                        <!-- Calibrated Weight -->
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Calibrated:" FontWeight="Bold" Margin="0,0,5,5"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="RightCalibratedTxt" Text="0 kg" FontWeight="Bold" Margin="5,0,0,5"/>

                                        <!-- Display Weight (after tare) -->
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Display:" FontWeight="Bold" Margin="0,0,5,5"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="RightDisplayTxt" Text="0 kg" FontWeight="Bold" 
                                                   Foreground="#FF28A745" Margin="5,0,0,5"/>

                                        <!-- Tare Status -->
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Tare:" FontWeight="Bold" Margin="0,0,5,0"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="RightTareStatusTxt" Text="- Not Tared" FontSize="10" Margin="5,0,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Summary -->
                            <Border Background="#FFF8F9FA" BorderBrush="#FF6C757D" BorderThickness="1" 
                                    CornerRadius="5" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="SUMMARY" FontWeight="Bold" 
                                               Foreground="#FF6C757D" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Total Weight -->
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Total:" FontWeight="Bold" Margin="0,0,5,5"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TotalWeightTxt" Text="0 kg" FontWeight="Bold" 
                                                   Foreground="#FF28A745" Margin="5,0,0,5"/>

                                        <!-- Balance -->
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Balance:" FontWeight="Bold" Margin="0,0,5,0"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="BalanceTxt" Text="50% L / 50% R" FontWeight="Bold" 
                                                   Foreground="#FF6C757D" Margin="5,0,0,0"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </GroupBox>
                </ScrollViewer>
                
                <!-- Statistics Panel (fixed at bottom) -->
                <GroupBox Grid.Row="1" Header="CAN Statistics" Padding="15" Margin="0,10,0,0"
                          Background="White" BorderBrush="#FFE0E0E0" BorderThickness="1">
                    <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- TX Count -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="TX Messages:" FontWeight="Bold" Margin="0,0,5,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" x:Name="TxCountTxt" Text="0" FontWeight="Bold" 
                                       Foreground="#FF3498DB" Margin="5,0,0,5"/>

                            <!-- RX Count -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="RX Messages:" FontWeight="Bold" Margin="0,0,5,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" x:Name="RxCountTxt" Text="0" FontWeight="Bold" 
                                       Foreground="#FF27AE60" Margin="5,0,0,5"/>

                            <!-- Message Rate -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Rate:" FontWeight="Bold" Margin="0,0,5,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" x:Name="MessageRateTxt" Text="0 msg/s" FontWeight="Bold" 
                                       Foreground="#FF6C757D" Margin="5,0,0,5"/>

                            <!-- Last Message -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Last:" FontWeight="Bold" Margin="0,0,5,0"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" x:Name="LastMessageTxt" Text="Never" FontSize="10" 
                                       Foreground="#FF6C757D" Margin="5,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</Window>
