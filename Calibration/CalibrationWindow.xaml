<Window x:Class="SuspensionPCB_CAN_WPF.CalibrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Variable Calibration Control" 
        Height="650" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Loaded="Window_Loaded"
        Background="#2E5984">

    <Window.Resources>
        <!-- Main Background Brush -->
        <SolidColorBrush x:Key="MainBackground" Color="#2E5984"/>

        <!-- Card Background -->
        <SolidColorBrush x:Key="CardBackground" Color="White"/>

        <!-- Header Text Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>

        <!-- Sub Header Style -->
        <Style x:Key="SubHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Opacity" Value="0.9"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,8,0,5"/>
            <Setter Property="Foreground" Value="#374151"/>
        </Style>

        <!-- Channel Button Style -->
        <Style x:Key="ChannelButtonStyle" TargetType="ToggleButton">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#EFF6FF"/>
                                <Setter Property="BorderBrush" Value="#2E5984"/>
                                <Setter Property="Foreground" Value="#2E5984"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Auto Spacing Button Style -->
        <Style x:Key="AutoSpacingButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource ChannelButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#D4EDDA"/>
                    <Setter Property="BorderBrush" Value="#28A745"/>
                    <Setter Property="Foreground" Value="#155724"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Manual Spacing Button Style -->
        <Style x:Key="ManualSpacingButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource ChannelButtonStyle}">
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#FFF3CD"/>
                    <Setter Property="BorderBrush" Value="#FFC107"/>
                    <Setter Property="Foreground" Value="#856404"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Reset Button Style -->
        <Style x:Key="ResetButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#6C757D"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Start Button Style -->
        <Style x:Key="StartButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#2E5984"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Cancel Button Style -->
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <!-- Main Container with Blue Background -->
    <Grid Background="{StaticResource MainBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Blue Header -->
            <RowDefinition Height="*"/>
            <!-- White Content -->
        </Grid.RowDefinitions>

        <!-- Blue Header Section -->
        <Grid Grid.Row="0" Background="{StaticResource MainBackground}" Margin="25,25,25,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Header Text -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Style="{StaticResource HeaderStyle}">Variable Calibration</TextBlock>
                <TextBlock Style="{StaticResource SubHeaderStyle}">PC3 → Suspension PCB (ID: 0x020)</TextBlock>
            </StackPanel>

            <!-- Right Side Info -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                <TextBlock Foreground="White" FontSize="14" FontWeight="Medium" HorizontalAlignment="Right">
                    Channels: Ch1, Ch2,Ch3, Ch4
                </TextBlock>
                <TextBlock Foreground="White" FontSize="14" FontWeight="Medium" HorizontalAlignment="Right" Opacity="0.9">
                    Mode: Weight-based Only
                </TextBlock>
            </StackPanel>
        </Grid>

        <!-- White Content Card -->
        <Border Grid.Row="1" Background="White" CornerRadius="0" Margin="25,15,25,25">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="4" Direction="320" Color="Black" Opacity="0.1" BlurRadius="10"/>
            </Border.Effect>

            <!-- Main Content Grid -->
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <!-- Content -->
                    <RowDefinition Height="Auto"/>
                    <!-- Action Buttons -->
                </Grid.RowDefinitions>

                <!-- Main Content Grid -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column -->
                    <StackPanel Grid.Column="0">

                        <!-- Point Count Section -->
                        <TextBlock Style="{StaticResource LabelStyle}">
                            <Run Text="Point Count"/>
                            <Run Text=" ℹ" Foreground="#9CA3AF" FontSize="11"/>
                        </TextBlock>
                        <Grid Margin="0,3,0,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <!-- Point Count Slider -->
                            <Slider x:Name="PointCountSlider" 
                                    Grid.Column="0"
                                    Minimum="2" Maximum="20" 
                                    Value="16" 
                                    TickFrequency="1" 
                                    IsSnapToTickEnabled="True"
                                    Margin="0,0,8,0"
                                    ValueChanged="PointCountSlider_ValueChanged"/>
                            <!-- Point Count Display -->
                            <Border Grid.Column="1" 
                                    Background="#EFF6FF" 
                                    BorderBrush="#2E5984" 
                                    BorderThickness="1"
                                    CornerRadius="6" 
                                    Padding="10,5" 
                                    MinWidth="50">
                                <TextBlock x:Name="PointCountDisplay"
                                           Text="{Binding ElementName=PointCountSlider, Path=Value}" 
                                           FontFamily="Consolas" 
                                           FontSize="13"
                                           FontWeight="Bold"
                                           Foreground="#2E5984"
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <TextBlock FontSize="10" Foreground="#6B7280" Margin="0,1,0,0">
                            Select between 2 to 20 calibration points
                        </TextBlock>

                        <!-- Weight-based Mode Display (Static) -->
                        <TextBlock Style="{StaticResource LabelStyle}">Calibration Mode</TextBlock>
                        <Border Background="#D4EDDA" BorderBrush="#28A745" BorderThickness="2" CornerRadius="6" Padding="12,8" Margin="0,3,0,0">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock FontWeight="SemiBold" FontSize="12" Foreground="#155724" HorizontalAlignment="Center">Weight Based</TextBlock>
                                <TextBlock FontSize="10" Foreground="#155724" Opacity="0.8" Margin="0,1,0,0" HorizontalAlignment="Center">0x01 - Only Mode Available</TextBlock>
                            </StackPanel>
                        </Border>

                        <!-- Polynomial Order Section -->
                        <TextBlock Style="{StaticResource LabelStyle}">Polynomial Order</TextBlock>
                        <UniformGrid x:Name="PolynomialOrderGrid" Columns="4" Margin="0,3,0,0">
                            <ToggleButton x:Name="Poly1" Style="{StaticResource ChannelButtonStyle}" Click="PolynomialOrder_Click">1</ToggleButton>
                            <ToggleButton x:Name="Poly2" Style="{StaticResource ChannelButtonStyle}" IsChecked="True" Click="PolynomialOrder_Click">2</ToggleButton>
                            <ToggleButton x:Name="Poly3" Style="{StaticResource ChannelButtonStyle}" Click="PolynomialOrder_Click">3</ToggleButton>
                            <ToggleButton x:Name="Poly4" Style="{StaticResource ChannelButtonStyle}" Click="PolynomialOrder_Click">4</ToggleButton>
                        </UniformGrid>

                    </StackPanel>

                    <!-- Right Column -->
                    <StackPanel Grid.Column="2">

                        <!-- Spacing Configuration Section -->
                        <TextBlock Style="{StaticResource LabelStyle}">Spacing Configuration</TextBlock>
                        <Grid Margin="0,3,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Auto Spacing Button -->
                            <ToggleButton x:Name="AutoSpacingToggle" 
                                          Grid.Column="0"
                                          Style="{StaticResource AutoSpacingButtonStyle}" 
                                          IsChecked="True"
                                          Click="SpacingMode_Click">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock FontWeight="SemiBold" FontSize="11">Auto Spacing</TextBlock>
                                    <TextBlock FontSize="9" Foreground="#6B7280" Margin="0,1,0,0">System generated</TextBlock>
                                </StackPanel>
                            </ToggleButton>
                            <!-- Manual Spacing Button -->
                            <ToggleButton x:Name="ManualSpacingToggle" 
                                          Grid.Column="1"
                                          Style="{StaticResource ManualSpacingButtonStyle}"
                                          Click="SpacingMode_Click">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock FontWeight="SemiBold" FontSize="11">Manual Spacing</TextBlock>
                                    <TextBlock FontSize="9" Foreground="#6B7280" Margin="0,1,0,0">User defined</TextBlock>
                                </StackPanel>
                            </ToggleButton>
                        </Grid>

                        <!-- Max Weight Section -->
                        <TextBlock Style="{StaticResource LabelStyle}">Maximum Weight (kg)</TextBlock>
                        <Grid Margin="0,3,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Max Weight Input -->
                            <TextBox x:Name="MaxWeightTextBox" 
                                     Grid.Column="0"
                                     Text="100.0" 
                                     FontSize="13" 
                                     Padding="10,6" 
                                     BorderBrush="#D1D5DB"
                                     BorderThickness="2"
                                     Margin="0,0,8,0"
                                     TextChanged="MaxWeightTextBox_TextChanged"/>
                            <!-- Resolution Info -->
                            <TextBlock Grid.Column="1" 
                                       Text="0.1kg resolution" 
                                       VerticalAlignment="Center" 
                                       FontSize="10" 
                                       Foreground="#6B7280"/>
                        </Grid>

                        <!-- Channel Selection Section -->
                        <TextBlock Style="{StaticResource LabelStyle}">Channel Selection</TextBlock>
                        <UniformGrid Columns="4" Margin="0,11,0,0">
                            <ToggleButton x:Name="Channel1" Style="{StaticResource ChannelButtonStyle}" Click="Channel_Click">Ch 1</ToggleButton>
                            <ToggleButton x:Name="Channel2" Style="{StaticResource ChannelButtonStyle}" Click="Channel_Click">Ch 2</ToggleButton>
                            <ToggleButton x:Name="Channel3" Style="{StaticResource ChannelButtonStyle}" IsChecked="True" Click="Channel_Click">Ch 3</ToggleButton>
                            <ToggleButton x:Name="Channel4" Style="{StaticResource ChannelButtonStyle}" IsChecked="True" Click="Channel_Click">Ch 4</ToggleButton>
                        </UniformGrid>

                        <!-- Configuration Summary Section -->
                        <Border Background="#F8FAFC" CornerRadius="6" Padding="12" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" FontSize="13" Foreground="#0F172A" Margin="0,0,0,8">
                                    Configuration Summary
                                </TextBlock>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Summary Items -->
                                    <TextBlock Grid.Row="0" Grid.Column="0" FontSize="11" FontWeight="Medium" Foreground="#475569" Margin="0,1">
                                        <Run Text="Points: "/>
                                        <Run x:Name="SummaryPoints" Text="16" FontWeight="Bold"/>
                                    </TextBlock>
                                    <TextBlock Grid.Row="0" Grid.Column="1" FontSize="11" FontWeight="Medium" Foreground="#475569" Margin="0,1">
                                        <Run Text="Mode: "/>
                                        <Run x:Name="SummaryMode" Text="Weight-based" FontWeight="Bold"/>
                                    </TextBlock>
                                    <TextBlock Grid.Row="1" Grid.Column="0" FontSize="11" FontWeight="Medium" Foreground="#475569" Margin="0,1">
                                        <Run Text="Order: "/>
                                        <Run x:Name="SummaryOrder" Text="2" FontWeight="Bold"/>
                                    </TextBlock>
                                    <TextBlock Grid.Row="1" Grid.Column="1" FontSize="11" FontWeight="Medium" Foreground="#475569" Margin="0,1">
                                        <Run Text="Spacing: "/>
                                        <Run x:Name="SummarySpacing" Text="Auto" FontWeight="Bold"/>
                                    </TextBlock>
                                    <TextBlock Grid.Row="2" Grid.Column="0" FontSize="11" FontWeight="Medium" Foreground="#475569" Margin="0,1">
                                        <Run Text="Max Weight: "/>
                                        <Run x:Name="SummaryWeight" Text="100.0kg" FontWeight="Bold"/>
                                    </TextBlock>
                                    <TextBlock Grid.Row="2" Grid.Column="1" FontSize="11" FontWeight="Medium" Foreground="#475569" Margin="0,1">
                                        <Run Text="Channels: "/>
                                        <Run x:Name="SummaryChannels" Text="Ch3, Ch4" FontWeight="Bold"/>
                                    </TextBlock>
                                </Grid>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Grid>

                <!-- Action Buttons Section -->
                <Border Grid.Row="1" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" Margin="0,15,0,0" Padding="0,12,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <!-- Reset Button -->
                        <Button x:Name="ResetButton" 
                                Style="{StaticResource ResetButtonStyle}"
                                Click="ResetButton_Click">
                            Reset
                        </Button>
                        <!-- Cancel Button -->
                        <Button x:Name="CancelButton" 
                                Style="{StaticResource CancelButtonStyle}"
                                Click="CancelButton_Click">
                            Cancel
                        </Button>
                        <!-- Start Calibration Button -->
                        <Button x:Name="StartCalibrationButton" 
                                Style="{StaticResource StartButtonStyle}"
                                Click="StartCalibrationButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <!-- Play Icon -->
                                <Path Data="M8,5.14V19.14L19,12.14L8,5.14Z" 
                                      Fill="White" 
                                      Stretch="Uniform" 
                                      Width="10" 
                                      Height="10" 
                                      Margin="0,0,6,0"/>
                                <TextBlock>Start Calibration</TextBlock>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>