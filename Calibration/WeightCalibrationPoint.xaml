<Window x:Class="SuspensionPCB_CAN_WPF.WeightCalibrationPoint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Weight Calibration Point" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#2E5984">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Weight Calibration Point" 
                               FontSize="22" FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Set target weight and capture calibration point" 
                               FontSize="13" Foreground="#BDC3C7"
                               Margin="0,3,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="4 Load Cells Active" 
                               FontSize="13" Foreground="#BDC3C7"
                               HorizontalAlignment="Right"/>
                    <TextBlock Text="Weight-based Mode" 
                               FontSize="13" Foreground="#BDC3C7"
                               HorizontalAlignment="Right" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Progress Section -->
        <Border Grid.Row="1" Background="#E8F4FD" BorderBrush="#2E5984" BorderThickness="0,0,0,2">
            <Grid Margin="20,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock x:Name="PointCounterText" Text="" 
                               FontSize="16" FontWeight="Bold" 
                               Foreground="#2E5984"/>
                </StackPanel>

                <ProgressBar Grid.Column="1" x:Name="CalibrationProgress" 
                             Width="200" Height="6"
                             Value="0" Maximum="100"
                             Background="#E0E0E0" 
                             Foreground="#4CAF50"
                             VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="20,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column: Target Weight Input -->
            <StackPanel Grid.Column="0" Margin="0,0,15,0">

                <!-- Manual Weight Entry -->
                <Border Background="White" BorderBrush="#E3F2FD" BorderThickness="2" 
                        CornerRadius="8" Padding="20" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Enter Target Weight" 
                                   FontSize="16" FontWeight="Bold" 
                                   Foreground="#2E5984" Margin="0,0,0,15"/>

                        <!-- Weight Input -->
                        <Border Background="#F8F9FA" BorderBrush="#CED4DA" BorderThickness="1" 
                                CornerRadius="4" Padding="5">
                            <StackPanel Orientation="Horizontal">
                                <TextBox x:Name="ManualWeightInput"
                                         Text="" FontSize="24" FontWeight="Bold"
                                         VerticalAlignment="Center" HorizontalAlignment="Stretch"
                                         BorderThickness="0" Background="Transparent"
                                         TextAlignment="Center" Margin="10,5" Width="120"
                                         TabIndex="0" 
                                         KeyDown="ManualWeightInput_KeyDown"
                                         GotFocus="ManualWeightInput_GotFocus"
                                         LostFocus="ManualWeightInput_LostFocus"/>
                                <TextBlock Text="kg" 
                                           FontSize="18" Foreground="#6C757D"
                                           VerticalAlignment="Center" Margin="5,0,15,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Action Buttons -->
                        <Button x:Name="SetTargetBtn" Content="Set as Target Weight" 
                                Click="ApplyManualWeight_Click"
                                Background="#2E5984" Foreground="White" 
                                FontSize="14" FontWeight="SemiBold"
                                Padding="15,10" BorderThickness="0" 
                                Margin="0,15,0,10"/>
                    </StackPanel>
                </Border>

                <!-- Target Display -->
                <Border x:Name="TargetDisplayBorder" Background="#D4EDDA" 
                        BorderBrush="#28A745" BorderThickness="2" 
                        CornerRadius="8" Padding="20" Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Target Weight Set" 
                                   FontSize="12" Foreground="#155724" 
                                   HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Name="TargetWeightText" Text="" 
                                       FontSize="28" FontWeight="Bold" 
                                       Foreground="#155724"/>
                            <TextBlock Text=" kg" FontSize="16" 
                                       Foreground="#155724" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <TextBlock x:Name="AutoGeneratedPointText" Text="" 
                                   FontSize="10" Foreground="#155724" 
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Center Column: Current Reading -->
            <StackPanel Grid.Column="1" Margin="15,0">

                <!-- Current Weight Display -->
                <Border x:Name="CurrentReadingBorder" 
                        Background="White" BorderBrush="#28A745" 
                        BorderThickness="2" CornerRadius="8" Padding="25" Margin="0,0,0,20">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Current Total Weight" 
                                   FontSize="14" Foreground="#6C757D" 
                                   HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <TextBlock x:Name="CurrentWeightText" Text="" 
                                       FontSize="40" FontWeight="Bold" 
                                       Foreground="#2C3E50"/>
                            <TextBlock Text=" kg" FontSize="20" 
                                       Foreground="#2C3E50" VerticalAlignment="Bottom"/>
                        </StackPanel>
                        <TextBlock x:Name="StabilityIndicator" Text="" 
                                   FontSize="14" FontWeight="Bold" 
                                   Foreground="#28A745" 
                                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Weight Difference Indicator -->
                <Border x:Name="DifferenceIndicator" Background="#FFF3CD" 
                        BorderBrush="#FFC107" BorderThickness="1" 
                        CornerRadius="4" Padding="15" Margin="0,0,0,20" 
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock Text="Weight Difference" 
                                   FontSize="12" FontWeight="Bold" 
                                   Foreground="#856404" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="DifferenceText" Text="" 
                                   FontSize="16" FontWeight="Bold" 
                                   Foreground="#856404" HorizontalAlignment="Center" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Capture Button -->
                <Button x:Name="CapturePointBtn" Content="Capture This Point" 
                        Click="CapturePoint_Click"
                        Background="#4CAF50" Foreground="White" 
                        FontSize="16" FontWeight="Bold"
                        Padding="20,15" BorderThickness="0" 
                        Margin="0,10,0,0"
                        IsEnabled="False"/>
            </StackPanel>

            <!-- Right Column: Load Cell Data & Controls -->
            <StackPanel Grid.Column="2" Margin="15,0,0,0">

                <!-- Load Cell Values -->
                <Border Background="White" BorderBrush="#E9ECEF" BorderThickness="1" 
                        CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Load Cell Readings" 
                                   FontWeight="Bold" FontSize="14" 
                                   Foreground="#2C3E50" Margin="0,0,0,10"/>

                        <!-- Load Cells Grid -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Front Left -->
                            <Border Grid.Row="0" Grid.Column="0" 
                                    Background="#F8F9FA" 
                                    Padding="8" Margin="2" 
                                    BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="4">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Front Left" FontSize="9" 
                                               Foreground="#6C757D" FontWeight="Bold"/>
                                    <TextBlock x:Name="FrontLeftWeightText" Text="" 
                                               FontSize="11" FontWeight="Bold" 
                                               Foreground="#2C3E50"/>
                                    <TextBlock x:Name="FrontLeftADCText" Text="" 
                                               FontSize="8" Foreground="#6C757D"/>
                                    <TextBlock x:Name="FrontLeftVoltageText" Text="" 
                                               FontSize="8" Foreground="#6C757D"/>
                                </StackPanel>
                            </Border>

                            <!-- Front Right -->
                            <Border Grid.Row="0" Grid.Column="1" 
                                    Background="#F8F9FA"
                                    Padding="8" Margin="2" 
                                    BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="4">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Front Right" FontSize="9" 
                                               Foreground="#6C757D" FontWeight="Bold"/>
                                    <TextBlock x:Name="FrontRightWeightText" Text="" 
                                               FontSize="11" FontWeight="Bold" 
                                               Foreground="#2C3E50"/>
                                    <TextBlock x:Name="FrontRightADCText" Text="" 
                                               FontSize="8" Foreground="#6C757D"/>
                                    <TextBlock x:Name="FrontRightVoltageText" Text="" 
                                               FontSize="8" Foreground="#6C757D"/>
                                </StackPanel>
                            </Border>

                            <!-- Rear Left -->
                            <Border Grid.Row="1" Grid.Column="0" 
                                    Background="#F8F9FA" 
                                    Padding="8" Margin="2" 
                                    BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="4">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Rear Left" FontSize="9" 
                                               Foreground="#6C757D" FontWeight="Bold"/>
                                    <TextBlock x:Name="RearLeftWeightText" Text="" 
                                               FontSize="11" FontWeight="Bold" 
                                               Foreground="#2C3E50"/>
                                    <TextBlock x:Name="RearLeftADCText" Text="" 
                                               FontSize="8" Foreground="#6C757D"/>
                                    <TextBlock x:Name="RearLeftVoltageText" Text="" 
                                               FontSize="8" Foreground="#6C757D"/>
                                </StackPanel>
                            </Border>

                            <!-- Rear Right -->
                            <Border Grid.Row="1" Grid.Column="1" 
                                    Background="#F8F9FA" 
                                    Padding="8" Margin="2" 
                                    BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="4">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="Rear Right" FontSize="9" 
                                               Foreground="#6C757D" FontWeight="Bold"/>
                                    <TextBlock x:Name="RearRightWeightText" Text="" 
                                               FontSize="11" FontWeight="Bold" 
                                               Foreground="#2C3E50"/>
                                    <TextBlock x:Name="RearRightADCText" Text="" 
                                               FontSize="8" Foreground="#6C757D"/>
                                    <TextBlock x:Name="RearRightVoltageText" Text="" 
                                               FontSize="8" Foreground="#6C757D"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <StackPanel>
                    <Button Content="Skip This Point" Click="SkipPoint_Click"
                            Background="#FFC107" Foreground="#212529" 
                            FontSize="12" FontWeight="SemiBold" 
                            Padding="15,8" Margin="0,0,0,8" 
                            BorderThickness="0"/>

                    <Button Content="Retry Reading" Click="RetryReading_Click"
                            Background="#6C757D" Foreground="White" 
                            FontSize="12" Padding="15,8" Margin="0,0,0,8"
                            BorderThickness="0"/>

                    <Button x:Name="CompleteCalibrationBtn" Content="Complete Calibration" 
                            Click="CompleteCalibrationManually_Click"
                            Background="#2196F3" Foreground="White" 
                            FontSize="12" FontWeight="SemiBold"
                            Padding="15,8" BorderThickness="0"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Bottom Status Bar -->
        <Border Grid.Row="3" Background="White" BorderBrush="#E9ECEF" BorderThickness="0,1,0,0">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Message -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusTitle" Text="" 
                               FontSize="13" FontWeight="Bold" Foreground="#6C757D"/>
                    <TextBlock x:Name="StatusMessage" 
                               Text="" 
                               FontSize="13" Foreground="#6C757D"/>
                </StackPanel>

                <!-- Navigation Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="PreviousPointBtn" Content="← Previous" 
                            Click="PreviousPoint_Click"
                            Background="White" Foreground="#2C3E50" 
                            BorderBrush="#CED4DA" BorderThickness="1" 
                            Padding="12,6" Margin="0,0,10,0"/>

                    <Button x:Name="NextPointBtn" Content="Next →" 
                            Click="NextPoint_Click" IsEnabled="False"
                            Background="White" Foreground="#2C3E50" 
                            BorderBrush="#CED4DA" BorderThickness="1" 
                            Padding="12,6" Margin="0,0,10,0"/>

                    <Button Content="Cancel" 
                            Click="CancelCalibration_Click"
                            Background="#DC3545" Foreground="White" 
                            BorderThickness="0" Padding="15,6"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>