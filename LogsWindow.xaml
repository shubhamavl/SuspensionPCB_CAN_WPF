<Window x:Class="SuspensionPCB_CAN_WPF.LogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Production Logs" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF6C757D" Padding="15" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Production Logs" FontSize="20" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="System logging and diagnostics" FontSize="12" 
                           Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Log Controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="15,0,15,10">
            <CheckBox x:Name="EnableLoggingChk" Content="Enable Logging" IsChecked="True" 
                      VerticalAlignment="Center" Margin="0,0,20,0" Checked="EnableLoggingChk_Checked" 
                      Unchecked="EnableLoggingChk_Unchecked"/>
            <TextBlock Text="Min Level:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="MinLevelCombo" Width="100" SelectedIndex="0" 
                      SelectionChanged="MinLevelCombo_SelectionChanged">
                <ComboBoxItem Content="Info"/>
                <ComboBoxItem Content="Warning"/>
                <ComboBoxItem Content="Error"/>
                <ComboBoxItem Content="Critical"/>
            </ComboBox>
        </StackPanel>

        <!-- Log Filters -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="15,0,15,10">
            <TextBlock Text="Show:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <CheckBox x:Name="ShowInfoChk" Content="Info" IsChecked="True" 
                      VerticalAlignment="Center" Margin="0,0,10,0" Checked="LogFilterChanged" 
                      Unchecked="LogFilterChanged"/>
            <CheckBox x:Name="ShowWarningChk" Content="Warning" IsChecked="True" 
                      VerticalAlignment="Center" Margin="0,0,10,0" Checked="LogFilterChanged" 
                      Unchecked="LogFilterChanged"/>
            <CheckBox x:Name="ShowErrorChk" Content="Error" IsChecked="True" 
                      VerticalAlignment="Center" Margin="0,0,10,0" Checked="LogFilterChanged" 
                      Unchecked="LogFilterChanged"/>
            <CheckBox x:Name="ShowCriticalChk" Content="Critical" IsChecked="True" 
                      VerticalAlignment="Center" Margin="0,0,10,0" Checked="LogFilterChanged" 
                      Unchecked="LogFilterChanged"/>
        </StackPanel>

        <!-- Log Messages -->
        <GroupBox Grid.Row="3" Header="Log Messages" Padding="5" Margin="15,0,15,10">
            <ListBox x:Name="LogMessagesListBox" ItemsSource="{Binding FilteredLogEntries}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding FormattedMessage}" FontFamily="Consolas" FontSize="11"/>
                            <TextBlock Text="{Binding Source}" FontSize="9" Foreground="Gray" Margin="20,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>

        <!-- Log Actions -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,15">
            <Button Content="Clear Logs" Style="{StaticResource ModernButton}" 
                    Background="#FFDC3545" Click="ClearLogsBtn_Click" Margin="5"/>
            <Button Content="Export Logs" Style="{StaticResource ModernButton}" 
                    Background="#FF17A2B8" Click="ExportLogsBtn_Click" Margin="5"/>
            <TextBlock x:Name="LogCountTxt" Text="0 entries" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
