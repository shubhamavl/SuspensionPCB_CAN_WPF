<Window x:Class="SuspensionPCB_CAN_WPF.LogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Production Logs" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Controls -->
            <RowDefinition Height="Auto"/> <!-- Filter checkboxes -->
            <RowDefinition Height="*"/>    <!-- Log messages (MAIN AREA) -->
            <RowDefinition Height="Auto"/> <!-- Status bar with buttons -->
        </Grid.RowDefinitions>
        
        <!-- Row 0: Header -->
        <Border Grid.Row="0" Background="#FF5D6D7E" Padding="15">
            <StackPanel>
                <TextBlock Text="Production Logs" FontSize="20" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="System logging and diagnostics" FontSize="12" 
                           Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Row 1: Controls (Enable logging, Min level) -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="15,10">
            <CheckBox x:Name="EnableLoggingChk" Content="Enable Logging" IsChecked="True" 
                      VerticalAlignment="Center" Margin="0,0,20,0" Checked="EnableLoggingChk_Checked" 
                      Unchecked="EnableLoggingChk_Unchecked"/>
            <TextBlock Text="Min Level:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="MinLevelCombo" Width="100" SelectedIndex="0" 
                      SelectionChanged="MinLevelCombo_SelectionChanged">
                <ComboBoxItem Content="Info"/>
                <ComboBoxItem Content="Warning"/>
                <ComboBoxItem Content="Error"/>
                <ComboBoxItem Content="Critical"/>
            </ComboBox>
        </StackPanel>
        
        <!-- Row 2: Filter checkboxes -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="15,5">
            <TextBlock Text="Show:" Margin="0,0,10,0"/>
            <CheckBox x:Name="ShowInfoChk" Content="Info" IsChecked="True" 
                      VerticalAlignment="Center" Margin="0,0,15,0" Checked="LogFilterChanged" 
                      Unchecked="LogFilterChanged"/>
            <CheckBox x:Name="ShowWarningChk" Content="Warning" IsChecked="True" 
                      VerticalAlignment="Center" Margin="0,0,15,0" Checked="LogFilterChanged" 
                      Unchecked="LogFilterChanged"/>
            <CheckBox x:Name="ShowErrorChk" Content="Error" IsChecked="True" 
                      VerticalAlignment="Center" Margin="0,0,15,0" Checked="LogFilterChanged" 
                      Unchecked="LogFilterChanged"/>
            <CheckBox x:Name="ShowCriticalChk" Content="Critical" IsChecked="True" 
                      VerticalAlignment="Center" Checked="LogFilterChanged" 
                      Unchecked="LogFilterChanged"/>
        </StackPanel>
        
        <!-- Row 3: Log messages area (takes most space) -->
        <Border Grid.Row="3" BorderBrush="#FFCCCCCC" BorderThickness="1" Margin="15,10">
            <ListBox x:Name="LogMessagesListBox" ItemsSource="{Binding FilteredLogEntries}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding FormattedMessage}" FontFamily="Consolas" FontSize="11"/>
                            <TextBlock Text="{Binding Source}" FontSize="9" Foreground="Gray" Margin="20,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
        
        <!-- Row 4: Status bar with entry count and buttons -->
        <Grid Grid.Row="4" Background="#FFF0F0F0" Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" x:Name="LogCountTxt" 
                       Text="0 entries" VerticalAlignment="Center" 
                       Margin="15,0" FontWeight="SemiBold"/>
            
            <Button Grid.Column="1" Content="Clear Logs" 
                    Style="{StaticResource ModernButton}" 
                    Background="#FFDC3545" Width="120" Height="35" Margin="5"
                    Click="ClearLogsBtn_Click"/>
            
            <Button Grid.Column="2" Content="Export Logs" 
                    Style="{StaticResource ModernButton}" 
                    Background="#FF17A2B8" Width="120" Height="35" Margin="5,5,15,5"
                    Click="ExportLogsBtn_Click"/>
        </Grid>
    </Grid>
</Window>
